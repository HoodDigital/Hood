@model EnterCodeViewModel
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Validate your Email";

}
<div class="header">
    <h2>Validate email</h2>
    <p>We have sent you a six digit code via email, please enter this code to confirm your email address and continue setting up your account.</p>
</div>
<form method="post">
    <div asp-validation-summary="All" class="validation-summary"></div>
    <input asp-for="UserId" type="hidden" />
    <div class="form-group">
        <div class="floating-label">
            <input asp-for="Code" class="form-control" placeholder="Validation code" />
            <label asp-for="Code"></label>
        </div>
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <p><button type="submit" class="btn btn-block btn-success">Confirm your email</button></p>
</form>
