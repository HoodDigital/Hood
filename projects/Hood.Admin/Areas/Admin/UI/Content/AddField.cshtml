@model AddMetaModel
@{
    Layout = null;
}
<div class="ibox collapsed">
    <div class="ibox-title">
        <h5>Add a new field...</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
        </div>
    </div>
    <div>
        <div class="ibox-content">
            <form id="add-field-form">
                <input type="hidden" id="cfContentId" name="cfContentId" value="@Model.cfContentId" />
                <div class="row">
                    <div class="col-xs-6">
                        <createField db-field="cfName" field-type="text" field-name="Field Name" db-value="" />
                    </div>
                    <div class="col-xs-6">
                        <div class="form-group">
                            <label>Field Type</label>
                            <div>
                                <select id="cpType" name="cfType" class="form-control">
                                    <option>Text</option>
                                    <option value="Textarea">Multi Line Text</option>
                                    <option>Image</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <createField db-field="cfDefaultValue" field-type="text" field-name="Default Value" db-value="" />
                    </div>
                    <div class="col-xs-6">
                        <createField db-field="cfValue" field-type="text" field-name="Fixed Value (For use on this post only.)" db-value="" />
                    </div>
                </div>
                <p class="text-right">
                    <button class="btn btn-sm btn-primary" type="button" id="add-field-submit"><i class="fa fa-plus-circle m-r-sm"></i>Add field</button>
                </p>
            </form>
        </div>
    </div>
</div>
