@model ContentTypeListModel
<input type="hidden" asp-for="PageIndex" />
<input type="hidden" asp-for="PageSize" />

<div class="card mb-3">
    <div class="card-header position-relative" id="content-search-panel-heading">
        <p class="card-title m-0 font-weight-bold">
            <a class="stretched-link text-dark text-decoration-none" data-bs-toggle="collapse" data-target="#content-search-panel" href="#content-search-panel" aria-expanded="true" aria-controls="content-search-panel">
                Search Filters
                <i class="fe fe-arrow-up mt-1"></i>
            </a>
        </p>
    </div>
    <div class="card-body collapse show" aria-labelledby="content-search-panel-heading" id="content-search-panel">
        <div class="form-floating mb-3">
            <select class="form-select submit-on-change" asp-for="Order">
                <option value="Title">By Title (A-Z)</option>
                <option value="TitleDesc">By Title (Z-A)</option>
            </select>
            <label asp-for="Order"></label>
            <small asp-for="Order"></small>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Search" type="text" placeholder="Search" class="form-control">
            <label asp-for="Search"></label>
            <small asp-for="Search"></small>
        </div>
        <div class="mb-3">
            <div class="form-check form-switch">
                <input asp-for="HideDisabled" class="form-check-input">
                <label asp-for="HideDisabled" class="form-check-label d-block"></label>
                <small asp-for="HideDisabled"></small>
            </div>
        </div>
        <button type="submit" class="btn btn-success btn-block"> Search</button>
    </div>
</div>
