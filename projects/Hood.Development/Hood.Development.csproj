<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UserSecretsId>Hood.Web</UserSecretsId>
    <TypeScriptToolsVersion>4.2</TypeScriptToolsVersion>
    <TypeScriptCompileBlocked>true</TypeScriptCompileBlocked>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="dist\**" />
    <Compile Remove="src\css\**" />
    <Compile Remove="src\js\**" />
    <Content Remove="dist\**" />
    <Content Remove="src\css\**" />
    <Content Remove="src\js\**" />
    <EmbeddedResource Remove="dist\**" />
    <EmbeddedResource Remove="src\css\**" />
    <EmbeddedResource Remove="src\js\**" />
    <None Remove="dist\**" />
    <None Remove="src\css\**" />
    <None Remove="src\js\**" />
    <TypeScriptCompile Remove="dist\**" />
    <TypeScriptCompile Remove="node_modules\**" />
    <TypeScriptCompile Remove="src\css\**" />
    <TypeScriptCompile Remove="src\js\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.TypeScript.MSBuild" Version="4.2.4">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Hood.Core\Hood.Core.csproj" />
    <ProjectReference Include="..\Hood.Admin\Hood.Admin.csproj" />
    <ProjectReference Include="..\Hood.UI\Hood.UI.csproj" />
    <ProjectReference Include="..\Hood.UI.Core\Hood.UI.Core.csproj" />
    <ProjectReference Include="..\Hood.UI.Bootstrap4\Hood.UI.Bootstrap4.csproj" />
  </ItemGroup>

</Project>
