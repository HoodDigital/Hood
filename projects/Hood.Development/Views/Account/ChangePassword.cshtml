@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change your password";
    ViewData["SubTitle"] = "You should update your password regularly for added security.";
    ViewData.AddActivePage(ManageNavPages.ChangePassword);
}
<div class="header">
    <h2>@ViewData["Title"]</h2>
    @if (Model.SaveMessage.IsSet())
    {
        <alert type="@Model.MessageType" size="Medium" icon="fa-save">@Model.SaveMessage</alert>
    }
    <p>
        You should update your password regularly for added security.
    </p>
</div>
<form method="post" class="d-grid gap-2">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="OldPassword"></label>
        <input type="password" class="form-control" asp-for="OldPassword">
        <span asp-validation-for="OldPassword" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="NewPassword"></label>
        <input type="password" class="form-control" asp-for="NewPassword">
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ConfirmPassword"></label>
        <input type="password" class="form-control" asp-for="ConfirmPassword">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Update password</button>
</form>
