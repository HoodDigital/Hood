@model BootstrapFormInputModel
@switch (Model.Layout)
{
    case BootstrapFormInputLayout.Horizontal:
        <div class="row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">@Model.DisplayName</label>
            <div class="col-sm-10">
                <input class="form-control" id="@Model.Id" name="@Model.Name" type="@Model.Type" @Model.Disabled @(Model.Required ? "required" : "")>
            </div>
        </div>
        break;
}