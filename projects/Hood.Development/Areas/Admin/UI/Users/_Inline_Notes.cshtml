@model UserProfileView<IdentityRole>
@{
    Layout = null;
}
@foreach (var note in Model.Notes)
{
    <div class="p-3 border-bottom">
        <div class="mb-0">@Html.Raw(note.Note.AddHtmlLineBreaks())</div>
        <div class="d-flex">
            <div class="flex-fill text-muted">
                <small>@note.CreatedBy </small>
                <small>@note.CreatedOn.ToDisplay()</small>
            </div>
            <div><a class="text-danger text-decoration-none user-notes-delete" asp-action="DeleteNote" asp-route-id="@Model.Id" asp-route-noteId="@note.Id"><i class="fa fa-trash-alt me-2"></i>Delete</a></div>
        </div>
    </div>
}
