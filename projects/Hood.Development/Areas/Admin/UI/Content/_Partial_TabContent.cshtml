@model Content
<div id="content" class="tab-pane active" role="tabpanel" aria-labelledby="content-tab">
    <partial name="_Editor_Content" />
</div>
@if (Model.Type.ShowImage || Model.Type.ShowBanner)
{
    <div id="image" class="tab-pane" role="tabpanel" aria-labelledby="image-tab">
        <partial name="_Editor_Images" />
    </div>
}
@if (Model.Type.Templates)
{
    <div id="template" class="tab-pane" role="tabpanel" aria-labelledby="template-tab">
        <partial name="_Editor_Template" />
    </div>
}
@if (Model.Metadata.Where(c => c.Name.StartsWith("Content." + Model.Type.BaseName + ".")).Count() > 0 ||
 Model.Metadata.Where(c => c.Name.StartsWith("Custom.")).Count() > 0)
{
    <div id="type" class="tab-pane" role="tabpanel" aria-labelledby="type-tab">
        <partial name="_Editor_Type" />
    </div>
}
@if (Model.Type.Gallery)
{
    <div id="gallery" class="tab-pane" role="tabpanel" aria-labelledby="gallery-tab">
        <partial name="_Editor_Media" />
    </div>
}
@if (Model.Metadata.Where(c => c.Name.StartsWith("SEO.")).Count() > 0)
{
    <div id="seo" class="tab-pane" role="tabpanel" aria-labelledby="seo-tab">
        <partial name="_Editor_SEO" />
    </div>
}
