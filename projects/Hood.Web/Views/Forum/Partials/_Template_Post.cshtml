@model Post
@{
    var _account = Context.GetAccountInfo();
}
<div class="forum-post" id="@string.Format("post-{0}", Model.Id)">
    <div class="row">
        <div class="col-md-10">
            <div class="post-content">
                @if (Model.ReplyId.HasValue)
                {
                    <span>
                        This is a reply to
                        <a class="btn btn-sm btn-info" asp-action="ShowTopic" asp-route-id="@Model.TopicId" asp-route-title="@Model.Topic.Title" asp-route-highlight="@Model.ReplyId">Reply</a>
                    </span>
                }
                @Html.Raw(Model.HtmlBody)
            </div>
        </div>
        <div class="col-md-2 text-right">
            <p>
                <a class="btn btn-sm btn-info" asp-action="ReportPost" asp-route-id="@Model.Id">Report abuse</a>
            </p>
            <p>
                <a class="btn btn-sm btn-info" asp-action="ShowTopic" asp-route-id="@Model.TopicId" asp-route-title="@Model.Topic.Title" asp-route-reply="@Model.Id">Reply</a>
            </p>
            @if (User.Identity.IsAuthenticated &&
          (Model.AuthorId == _account.User.Id ||
            User.IsInRole("Administrator") ||
            User.IsInRole("Moderator")))
            {
                <p>
                    <a class="btn btn-sm btn-warning" asp-action="EditPost" asp-route-id="@Model.Id">Edit</a>
                </p>
                <p>
                    <a class="btn btn-sm btn-danger" asp-action="DeletePost" asp-route-id="@Model.Id">Delete</a>
                </p>
            }
        </div>
    </div>
    <hr />
    <div class="post-content m-b-md">
        @Html.Raw(Model.Signature)
    </div>
