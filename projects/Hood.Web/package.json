{
  "name": "hood.blank",
  "version": "6.0.0",
  "description": "Demo project for Hood CMS. Uses Nuget packages.",
  "author": "George Whysall",
  "scripts": {
    "build": "npm-run-all scss tsc",
    "build-production": "npm-run-all scss cssnano tsc tsc-production",
    "clean": "gulp clean",
    "cssnano": "gulp cssnano",
    "package": "npm-run-all clean build-production",
    "scss": "gulp scss",
    "scss-lint": "stylelint src/scss/ --fix",
    "tsc": "tsc && npm-run-all tsc-rollup",
    "tsc-production": "tsc --project tsconfig.production.json && npm-run-all tsc-rollup-production",
    "tsc-rollup": "rollup --config --debug",
    "tsc-rollup-production": "rollup --config",
    "watch-scss": "npm-watch scss",
    "watch-tsc": "npm-watch tsc"
  },
  "dependencies": {
    "hoodcms": "latest"
  },
  "devDependencies": {
    "@lopatnov/rollup-plugin-uglify": "^2.1.2",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "cssnano": "^5.0.16",
    "eslint": "^8.8.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-cssnano": "^2.1.3",
    "gulp-dart-sass": "^1.0.2",
    "gulp-imagemin": "^7.1.0",
    "gulp-less": "^4.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-rimraf": "^1.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "node-sass-tilde-importer": "^1.0.2",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "postcss": "^8.4.6",
    "rollup": "^2.67.0",
    "rollup-pluginutils": "^2.8.2",
    "sass": "^1.49.7",
    "stylelint": "^14.3.0",
    "terser": "^5.10.0",
    "typescript": "^4.5.5"
  },
  "watch": {
    "scss": {
      "patterns": [
        "src"
      ],
      "extensions": "scss",
      "quiet": false
    },
    "tsc": {
      "patterns": [
        "src"
      ],
      "extensions": "ts",
      "quiet": false
    }
  }
}