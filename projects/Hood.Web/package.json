{
    "name": "hood.blank",
    "version": "5.0.8",
    "author": "George Whysall",
    "description": "Demo project for Hood CMS. Uses Nuget packages.",
    "dependencies": {
        "hoodcms": "5.0.8"
    },
    "devDependencies": {
        "@lopatnov/rollup-plugin-uglify": "^2.1.1",
        "@rollup/plugin-commonjs": "^21.0.1",
        "@rollup/plugin-node-resolve": "^13.0.0",
        "@rollup/plugin-typescript": "^8.2.1",
        "cssnano": "^5.0.6",
        "eslint": "^7.29.0",
        "gulp": "^4.0.2",
        "gulp-autoprefixer": "^8.0.0",
        "gulp-concat": "^2.6.1",
        "gulp-cssnano": "^2.1.3",
        "gulp-dart-sass": "^1.0.2",
        "gulp-imagemin": "^7.1.0",
        "gulp-less": "^4.0.1",
        "gulp-rename": "^2.0.0",
        "gulp-rimraf": "^1.0.0",
        "gulp-sourcemaps": "^3.0.0",
        "node-sass-tilde-importer": "^1.0.2",
        "npm-run-all": "^4.1.5",
        "npm-watch": "^0.10.0",
        "postcss": "^8.2.15",
        "rollup": "^2.51.2",
        "rollup-pluginutils": "^2.8.2",
        "sass": "^1.35.1",
        "stylelint": "^13.13.1",
        "terser": "^5.7.0",
        "typescript": "^4.3.4"
    },
    "scripts": {
        "build": "npm-run-all scss tsc",
        "build-production": "npm-run-all scss cssnano tsc tsc-production",
        "clean": "gulp clean",
        "cssnano": "gulp cssnano",
        "package": "npm-run-all clean build-production",
        "scss": "gulp scss",
        "scss-lint": "stylelint src/scss/ --fix",
        "tsc": "tsc && npm-run-all tsc-rollup",
        "tsc-production": "tsc --project tsconfig.production.json && npm-run-all tsc-rollup-production",
        "tsc-rollup": "rollup --config --debug",
        "tsc-rollup-production": "rollup --config",
        "watch-scss": "npm-watch scss",
        "watch-tsc": "npm-watch tsc"
    },
    "watch": {
        "scss": {
            "patterns": [
                "src"
            ],
            "extensions": "scss",
            "quiet": false
        },
        "tsc": {
            "patterns": [
                "src"
            ],
            "extensions": "ts",
            "quiet": false
        }
    }
}