@model UserListModel
@{
    ViewBag.Title = "Website Users";
}
@section scripts {
    <script src="//amp.azure.net/libs/amp/2.3.0/azuremediaplayer.min.js"></script>
}
@section buttons {
    @if (Engine.Settings.Integrations.EnableMailchimp && Engine.Settings.Integrations.MailchimpApiKey.IsSet() && Engine.Settings.Integrations.MailchimpUserListId.IsSet())
    {
        <a class="btn btn-warning btn-sm warning-alert"
           asp-action="SyncToMailchimp"
           data-warning="Are you sure? This will sync ALL site users with the assigned Mailchimp list. Any extraneous users will be REMOVED from the mailchimp list.">
            <i class="fa fa-refresh  mr-2"></i>Sync List to Mailchimp
        </a>
    }
    <a class="btn btn-success hood-modal" asp-action="Create" data-complete="$.hood.Users.Create.Loaded"><i class="fa fa-user-plus mr-2"></i>Create New User</a>
}
<form class="inline" data-target="#user-list">
    <div class="row">
        <div class="col-sm-3">
            <input type="hidden" asp-for="PageIndex" />
            <input type="hidden" asp-for="PageSize" />
            <div class="form-group floating-label">
                <label asp-for="Order"></label>
                <select class="form-control" asp-for="Order">
                    <option value="DateDesc">Newest First</option>
                    <option value="Date">Oldest First</option>
                    <option value="LastLogOn">By Log in time</option>
                    <option value="UserName">By Username (A-Z)</option>
                    <option value="UserNameDesc">By Username (Z-A)</option>
                    <option value="Email">By Email (A-Z)</option>
                    <option value="EmailDesc">By Email (Z-A)</option>
                    <option value="LastName">By Last Name (A-Z)</option>
                    <option value="LastNameDesc">By Last Name (Z-A)</option>
                </select>
                <small asp-for="Search"></small>
            </div>
            <div class="form-group floating-label">
                <label asp-for="Role"></label>
                <select class="form-control" asp-for="Role">
                    <option value="">All Users</option>
                    @foreach (var role in await Engine.AccountManager.GetAllRolesAsync())
                    {
                        <option value="@role.Id">@role.Name</option>
                    }
                </select>
                <small asp-for="Search"></small>
            </div>
            <div class="form-group floating-label">
                <label asp-for="Subscription"></label>
                <select class="form-control" asp-for="Role">
                    <option value="">All Users</option>
                    @{ var subs = await Engine.AccountManager.GetSubscriptionPlansAsync();}
                    @foreach (var sub in subs.List)
                    {
                        <option value="@sub.Id">@sub.Name</option>
                    }
                </select>
                <small asp-for="Search"></small>
            </div>
            <div class="form-group floating-label">
                <label asp-for="Search"></label>
                <input asp-for="Search" type="text" placeholder="Search" class="form-control">
                <small asp-for="Search"></small>
            </div>
            <button type="submit" class="btn btn-success btn-block"> Search</button>
        </div>
        <div class="col-sm">
            <div id="user-list" class="hood-inline-list query" data-url="@Url.Action("List")" data-complete="$.hood.Users.Loaded">
                <alert icon="fa fa-4x fa-cog fa-spin" size="Epic" type="Dark" class="text-center">Loading Users...</alert>
            </div>
        </div>
    </div>
</form>
