@model UserProfile
@{
    ViewBag.Title = "Edit User: " + Model.UserName;
    BasicSettings _basicSettings = Engine.Settings.Basic;
    var stripeUrl = string.Format("https://dashboard.stripe.com{0}", Engine.Settings.Billing.EnableStripeTestMode ? "/test" : "");
}
@section buttons {
    @if (Model.StripeId.IsSet())
    {
        <a class="btn btn-info" target="_blank" href="@string.Format("{0}/customers/{1}", stripeUrl, Model.StripeId)">
            <i class="fa fa-cc-stripe"></i><span>&nbsp;View on Stripe</span>
        </a>
    }
    <a class="btn btn-dark reset-password"><i class="fa fa-lock"></i> Reset Password</a>
    <a class="btn btn-warning" asp-action="Impersonate" asp-route-id="@Model.Id"><i class="fa fa-user-secret"></i> Impersonate</a>
    <a href="javascript:document.getElementById('edit-user-form').submit()" class="btn btn-success"><i class="fa fa-save"></i> Save Profile</a>
}
@section breadcrumbs {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page"><a href="/admin">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page"><a asp-action="Index" asp-controller="Users" asp-route-area="Admin"><i class="fa fa-users"></i> Users</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
        </ol>
    </nav>
}
<alert type="@Model.MessageType" size="Medium" icon="fa-save">@Model.SaveMessage</alert>
<form asp-action="Edit" asp-route-id="@Model.Id" method="post" id="edit-user-form" data-id="@Model.Id" class="container ml-md-0 p-0">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <ul class="nav nav-tabs card-header-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="true">
                            Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="roles-tab" data-toggle="tab" href="#roles" role="tab" aria-controls="roles" aria-selected="false">
                            Roles
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="address-tab" data-toggle="tab" href="#address" role="tab" aria-controls="address" aria-selected="false">
                            Addresses
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="subscriptions-tab" data-toggle="tab" href="#subscriptions" role="tab" aria-controls="subscriptions" aria-selected="false">
                            Subscriptions
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="codes-tab" data-toggle="tab" href="#codes" role="tab" aria-controls="codes" aria-selected="false">
                            Access codes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="notes-tab" data-toggle="tab" href="#notes" role="tab" aria-controls="notes" aria-selected="false">
                            Notes
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="tab-content">
                <div id="profile" class="tab-pane p-4 active" role="tabpanel" aria-labelledby="profile-tab">
                    <h5>Basic Profile &amp; Contact Info</h5>
                    <div class="form-group floating-label">
                        <label asp-for="UserName"></label>
                        <input type="text" class="form-control" asp-for="UserName">
                    </div>
                    <div class="form-group floating-label">
                        <label asp-for="Email"></label>
                        <input type="text" class="form-control" asp-for="Email">
                        @if (Model.PhoneNumberConfirmed)
                        {
                            <small class="text-success"><i class="fa fa-info-circle mr-2"></i>This email is confirmed.</small>
                        }
                        else
                        {
                            <small class="text-danger"><i class="fa fa-info-circle mr-2"></i>This email is not confirmed.</small>
                        }
                    </div>
                    <div class="form-group floating-label">
                        <label asp-for="PhoneNumber"></label>
                        <input type="text" class="form-control" asp-for="PhoneNumber">
                        @if (Model.PhoneNumberConfirmed)
                        {
                            <small class="text-success"><i class="fa fa-info-circle mr-2"></i>This phone number is confirmed.</small>
                        }
                        else
                        {
                            <small class="text-danger"><i class="fa fa-info-circle mr-2"></i>This phone number is not confirmed.</small>
                        }
                    </div>
                    <div class="form-group floating-label">
                        <label asp-for="FirstName"></label>
                        <input type="text" class="form-control" asp-for="FirstName">
                    </div>
                    <div class="form-group floating-label">
                        <label asp-for="LastName"></label>
                        <input type="text" class="form-control" asp-for="LastName">
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input asp-for="Anonymous" class="custom-control-input">
                            <label asp-for="Anonymous" class="custom-control-label"></label>
                        </div>
                        <small asp-for="Anonymous"></small>
                    </div>
                    <hr class="mt-4 mb-4" />
                    <div class="form-group row align-items-center">
                        <div class="col-auto">
                            <fixedImage src="@Model.Avatar.SmallUrl" class="img-sm img-circle m-0 @Model.Id" id="user-edit-avatar" />
                        </div>
                        <div class="col">
                            <h6>Avatar</h6>
                            <p class="m-0">
                                <attacher dataid="@Model.Id" entity="ApplicationUser" field="Avatar" type="image" refresh="/admin/users/getavatar" tag="@Model.Id" class="btn btn-sm btn-info">Choose profile image...</attacher>
                                <a class="btn btn-sm btn-danger hood-inline-task" asp-action="ClearImage" asp-controller="Users" asp-area="Admin" asp-route-id="@Model.Id" data-complete="$.hood.Uploader.RefreshImage('.@Model.Id', '/admin/users/getavatar', '@Model.Id')"><i class="fa fa-trash"></i></a>
                            </p>
                        </div>
                    </div>

                    <hr class="mt-4 mb-4" />
                    <div class="form-group floating-label">
                        <label asp-for="CompanyName"></label>
                        <input type="text" class="form-control" asp-for="CompanyName">
                    </div>
                    <div class="form-group floating-label">
                        <label asp-for="JobTitle"></label>
                        <input type="text" class="form-control" asp-for="JobTitle">
                    </div>
                    <div class="form-group floating-label">
                        <label class="control-label" asp-for="Bio"></label>
                        <textarea type="text" class="form-control" asp-for="Bio"></textarea>
                    </div>
                    <hr />
                    <div class="form-group floating-label">
                        <label asp-for="ForumSignature"></label>
                        <textarea type="text" class="form-control" asp-for="ForumSignature"></textarea>
                    </div>
                    <hr class="mt-4 mb-4" />
                    <div class="form-group floating-label">
                        <label asp-for="Facebook"></label>
                        <input type="text" class="form-control" asp-for="Facebook">
                    </div>
                    <div class="form-group floating-label">
                        <label asp-for="Instagram"></label>
                        <input type="text" class="form-control" asp-for="Instagram">
                    </div>
                    <div class="form-group floating-label">
                        <label asp-for="LinkedIn"></label>
                        <input type="text" class="form-control" asp-for="LinkedIn">
                    </div>
                    <div class="form-group floating-label">
                        <label asp-for="Twitter"></label>
                        <input type="text" class="form-control" asp-for="Twitter">
                    </div>
                    <hr class="mt-4 mb-4" />
                    <div class="form-group floating-label">
                        <label asp-for="TwitterHandle"></label>

                        <input type="text" class="form-control" asp-for="TwitterHandle">
                    </div>
                    <div class="form-group floating-label">
                        <label asp-for="WebsiteUrl"></label>
                        <input type="text" class="form-control" asp-for="WebsiteUrl">
                    </div>
                </div>
                <div id="address" class="tab-pane p-4" role="tabpanel" aria-labelledby="address-tab">
                </div>
                <div id="roles" class="tab-pane" role="tabpanel" aria-labelledby="roles-tab">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item">
                            <h5 class="m-0 text-success">User Roles</h5>
                        </div>
                        @foreach (var role in Model.AllRoles)
                        {
                            <div class="list-group-item list-group-item-action p-3 pt-2 pb-2">
                                <div class="form-group m-0">
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input role-check" id="role-check-@role.Id" name="role-check-@role.Id" type="checkbox" data-id="@Model.Id" value="@role" @(Model.Roles.Any(r => r.Name == role.Name) ? "checked" : "") />
                                        <label class="custom-control-label d-block" for="role-check-@role.Id">
                                            @role.Name.CamelCaseToString()
                                        </label>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="list-group-item list-group-item-action">
                            <a class="stretched-link text-success text-decoration-none" href="CreateRole"><i class="fa fa-plus-circle mr-2"></i>Add new site role</a>
                        </div>
                    </div>
                </div>
                <div id="subscriptions" class="tab-pane" role="tabpanel" aria-labelledby="subscriptions-tab">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item">
                            <h5 class="m-0 text-success">Active Subscriptions</h5>
                        </div>
                        @{ var subs = Model.Subscriptions.Where(s => s.Status == "active" || s.Status == "trialing"); }
                        @foreach (var sub in subs)
                        {
                            <div class="list-group-item">
                                <div class=" row align-items-center">
                                    <div class="col">
                                        <p class=" m-0">
                                            <strong>@sub.Name</strong> <small class="text-info">@sub.StripeId</small>
                                        </p>
                                        <p class="mb-0">
                                            @if (sub.Status == "active")
                                            {
                                                <span class="badge-success badge">@sub.Status</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-warning">@sub.Status</span>
                                            }
                                            <span class="badge badge-default">Next cycle: @sub.CurrentPeriodEnd</span>
                                        </p>
                                    </div>
                                    <div class="col-auto">
                                        <a class="btn btn-danger btn-sm" asp-action="CancelUserSubscription" id="@sub.StripeSubscriptionId">
                                            <i class="fa fa-minus-circle mr-2"></i>Cancel
                                        </a>
                                        <a class="btn btn-info btn-sm" target="_blank" href="@string.Format("{0}/subscriptions/{1}", stripeUrl, sub.StripeSubscriptionId)">
                                            <i class="fa fa-external-link-alt mr-2"></i>Stripe
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (subs.Count() == 0)
                        {
                            <div class="list-group-item">
                                <p class="m-0 text-muted">No active subscriptions.</p>
                            </div>
                        }
                        <div class="list-group-item">
                            <h5 class="m-0 text-danger">Inactive Subscriptions</h5>
                        </div>
                        @{ subs = Model.Subscriptions.Where(s => s.Status != "active" && s.Status != "trialing"); }
                        @foreach (var sub in subs)
                        {
                            <div class="list-group-item list-group-item-action">
                                <div class=" row align-items-center">
                                    <div class="col">
                                        <p class=" m-0">
                                            <strong>@sub.Name</strong> <small class="text-info">@sub.StripeId</small>
                                        </p>
                                        <p class="mb-0">
                                            @if (sub.Status == "active")
                                            {
                                                <span class="badge-success badge">@sub.Status</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-warning">@sub.Status</span>
                                            }
                                            <span class="badge badge-default">Next cycle: @sub.CurrentPeriodEnd</span>
                                        </p>
                                    </div>
                                    <div class="col-auto">
                                        <a class="btn btn-info btn-sm" target="_blank" href="@string.Format("{0}/subscriptions/{1}", stripeUrl, sub.StripeSubscriptionId)">
                                            <i class="fa fa-external-link-alt mr-2"></i>Stripe
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (subs.Count() == 0)
                        {
                            <div class="list-group-item">
                                <p class="m-0 text-muted">No inactive subscriptions.</p>
                            </div>
                        }
                    </div>
                </div>
                @*<div id="codes" class="tab-pane p-4" role="tabpanel" aria-labelledby="codes-tab">
                        <div class="panel-body">
                            <h5>Access Codes</h5>

                            <div class="tag-list">
                                @foreach (var code in Model.AccessCodes)
                                {
                                    <ul>
                                        <li>
                                            <p>
                                                @code.Type - @code.Code - @code.Expiry.ToDisplay()
                                            </p>
                                        </li>
                                    </ul>
                                }
                                @if (Model.AccessCodes.Count() == 0)
                                {
                                    @Html.BootstrapAlert("No access codes.", AlertType.Info, false)
                                }
                            </div>
                        </div>
                    </div>*@
                <div id="notes" class="tab-pane" role="tabpanel" aria-labelledby="notes-tab">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item">
                            <h5 class="m-0 text-success">User Notes</h5>
                        </div>
                        @foreach (var note in Model.Notes)
                        {
                            <div class="list-group-item list-group-item-action">
                                <blockquote class="blockquote m-0">
                                    <p class="mb-0">@note.Note</p>
                                    <footer class="blockquote-footer">@note.CreatedBy <cite title="Source Title">@note.CreatedOn.ToDisplay()</cite></footer>
                                </blockquote>
                            </div>
                        }
                        <div class="list-group-item list-group-item-action">
                            <a class="stretched-link text-success text-decoration-none"><i class="fa fa-plus-circle mr-2"></i>Add note</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
