<ul class="navbar-nav">
    <li class="nav-item">
        <h4>Dashboard</h4>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-action="Index" asp-controller="Home" asp-area="Admin">
            <i class="fe fe-home"></i>
            Home
        </a>
    </li>
    @if (User.IsEditorOrBetter())
    {
        <li class="nav-item">
            <a class="nav-link dropdown collapsed" href="#sidebar-content" data-toggle="collapse" role="button" aria-expanded="false" aria-controls="sidebar-content">
                <i class="fas fa-pen-fancy"></i>
                Content
            </a>
            <div class="collapse" id="sidebar-content">
                <ul class="nav">
                    @{
                        var sideTypes = Engine.Settings.Content.AllowedTypes;
                        if (Engine.Settings.Property.Enabled)
                        {
                            sideTypes.Add(new ContentType() { Type = "property", TypeNamePlural = "Properties" });
                        }
                        sideTypes = sideTypes.OrderBy(t => t.TypeNamePlural).ToList();
                        foreach (ContentType ct in sideTypes)
                        {
                            if (ct.Type == "property")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="Index" asp-controller="Property" asp-route-area="Admin">
                                        <i class="fa fa-building"></i>
                                        @ct.TypeNamePlural
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="Index" asp-controller="Content" asp-route-type="@ct.Type" asp-route-area="Admin">
                                        <i class="fa @ct.Icon"></i>
                                        @if (!string.IsNullOrEmpty(Engine.Settings[ct.Type + "-page-title"]))
                                        {
                                            @Engine.Settings[ct.Type + "-page-title"]
                                        }
                                        else
                                        {
                                            @ct.TypeNamePlural
                                        }
                                    </a>
                                </li>
                            }
                        }
                    }
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Content" asp-route-area="Admin" asp-route-type="">
                            <i class="fa fa-archive"></i>
                            All Content
                        </a>
                    </li>
                </ul>
            </div>
        </li>
    }
    @if (User.IsEditorOrBetter() && Engine.Settings.Forum.Enabled)
    {
        <li class="nav-item">
            <a class="nav-link dropdown collapsed" href="#sidebar-forums" data-toggle="collapse" role="button" aria-expanded="false" aria-controls="sidebar-forums">
                <i class="fa fa-comments"></i>
                Forums
            </a>
            <div class="collapse" id="sidebar-forums">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Forum" asp-route-area="Admin">
                            <i class="fa fa-cogs"></i>Manage Forums
                        </a>
                    </li>
                </ul>
            </div>
        </li>
    }
    @if (User.IsAdminOrBetter() && Engine.Settings.Billing.IsSubscriptionsEnabled)
    {
        <li class="nav-item">
            <a class="nav-link dropdown collapsed" href="#sidebar-subscriptions" data-toggle="collapse" role="button" aria-expanded="false" aria-controls="sidebar-subscriptions">
                <i class="fa fa-award"></i>Subscriptions
            </a>
            <div class="collapse" id="sidebar-subscriptions">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Subscribers" asp-controller="Subscriptions" asp-route-area="Admin">
                            <i class="fa fa-user-plus"></i>Subscribers
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Plans" asp-controller="Subscriptions" asp-route-area="Admin">
                            <i class="fa fa-award"></i>Subscription Plans
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Products" asp-controller="Subscriptions" asp-route-area="Admin">
                            <i class="fa fa-layer-group"></i>Product Groups
                        </a>
                    </li>
                </ul>
            </div>
        </li>
    }
    @if (User.IsEditorOrBetter())
    {
        <li class="nav-item">
            <a class="nav-link" asp-action="Index" asp-controller="Media" asp-route-area="Admin">
                <i class="fa fa-image"></i>Media
            </a>
        </li>
    }
    @if (User.IsAdminOrBetter())
    {
        <li class="nav-item">
            <h4>Import/Export</h4>
        </li>
        <li class="nav-item">
            <a class="nav-link dropdown collapsed" href="#sidebar-import" data-toggle="collapse" role="button" aria-expanded="false" aria-controls="sidebar-import">
                <i class="fa fa-building"></i>
                Property
            </a>
            <div class="collapse" id="sidebar-import">
                <ul class="nav">
                    @if (Engine.Settings.Property.IsBlmImporterEnabled)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-action="BlmImporter" asp-controller="Import">
                                <i class="fa fa-upload"></i>Import Properties (BLM)
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Property" asp-controller="Settings">
                                <i class="fa fa-upload"></i>Enable Importer
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </li>
    }
    @if (User.IsEditorOrBetter())
    {
        <li class="nav-item">
            <h4>Settings</h4>
        </li>
        @if (User.IsAdminOrBetter() && Engine.Settings.Basic.EnableThemes)
        {
            <li class="nav-item">
                <a class="nav-link" asp-action="Theme" asp-controller="Home" asp-route-area="Admin">
                    <i class="fa fa-paint-brush"></i>Theme
                </a>
            </li>
        }
        @if (User.IsAdminOrBetter())
        {
            <li class="nav-item">
                <a class="nav-link" asp-action="Basics" asp-controller="Settings" asp-route-area="Admin">
                    <i class="fa fa-cogs"></i>Site Settings
                </a>
            </li>
        }
        @if (User.IsEditorOrBetter())
        {
            <li class="nav-item">
                <a class="nav-link" asp-action="Seo" asp-controller="Settings" asp-route-area="Admin">
                    <i class="fa fa-tag"></i>SEO Settings
                </a>
            </li>
        }
        @if (User.IsAdminOrBetter() && Engine.Settings.Basic.EnableApiKeys)
        {
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Api">
                    <i class="fa fa-key"></i>Api Keys
                </a>
            </li>
        }
        @if (User.IsAdminOrBetter())
        {
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Users">
                    <i class="fa fa-users-cog"></i>Users
                </a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link dropdown collapsed" href="#sidebar-settings" data-toggle="collapse" role="button" aria-expanded="false" aria-controls="sidebar-settings">
                <i class="fa fa-wrench"></i>Advanced Settings
            </a>
            <div class="collapse" id="sidebar-settings">
                <ul class="nav">
                    @if (User.IsAdminOrBetter())
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Logs">
                                <i class="fa fa-list"></i>Logs
                            </a>
                        </li>
                    }
                    <li class="nav-item">
                        <hr />
                    </li>
                    @if (User.IsAdminOrBetter())
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Account" asp-controller="Settings" asp-route-area="Admin">
                                <i class="fa fa-user-plus"></i>Account Settings
                            </a>
                        </li>
                    }
                    @if (User.IsAdminOrBetter())
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Billing" asp-controller="Settings" asp-route-area="Admin">
                                <i class="fa fa-money-bill-wave"></i>Billing Settings
                            </a>
                        </li>
                    }
                    @if (User.IsAdminOrBetter())
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Contact" asp-controller="Settings" asp-route-area="Admin">
                                <i class="fa fa-envelope"></i>Contact Settings
                            </a>
                        </li>
                    }
                    @if (User.IsAdminOrBetter())
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Content" asp-controller="Settings" asp-route-area="Admin">
                                <i class="fa fa-tag"></i>Content Settings
                            </a>
                        </li>
                    }
                    @if (User.IsAdminOrBetter())
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Forum" asp-controller="Settings" asp-route-area="Admin">
                                <i class="fa fa-comments"></i>Forum Settings
                            </a>
                        </li>
                    }
                    @if (User.IsAdminOrBetter())
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Integrations" asp-controller="Settings" asp-route-area="Admin">
                                <i class="fa fa-plug"></i>Integrations
                            </a>
                        </li>
                    }
                    @if (User.IsAdminOrBetter())
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Mail" asp-controller="Settings" asp-route-area="Admin">
                                <i class="fa fa-envelope"></i>Mail Settings
                            </a>
                        </li>
                    }
                    @if (User.IsAdminOrBetter())
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Media" asp-controller="Settings" asp-route-area="Admin">
                                <i class="fa fa-images"></i>Media Settings
                            </a>
                        </li>
                    }
                    @if (User.IsAdminOrBetter())
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Property" asp-controller="Settings" asp-route-area="Admin">
                                <i class="fa fa-building"></i>Property Settings
                            </a>
                        </li>
                    }
                    @if (User.IsAdminOrBetter())
                    {
                        <li class="divider"></li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Advanced" asp-controller="Settings" asp-route-area="Admin">
                                <i class="fa fa-exclamation-triangle"></i>Advanced Settings
                            </a>
                        </li>
                    }
                </ul>
            </div>
            <ul class="nav nav-second-level collapse" style="height: 0px;"></ul>
        </li>
    }
</ul>

