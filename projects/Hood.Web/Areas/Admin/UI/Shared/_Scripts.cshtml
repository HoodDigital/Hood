@inject IThemesService _themes
@{
    IntegrationSettings _plugins = Engine.Settings.Integrations;
}

@Html.RenderScripts(Url, ResourceLocation.BeforeJquery)
@Html.RenderInlineScripts(Url, ResourceLocation.BeforeJquery)

<partial name="_Scripts_JQuery" />

@Html.RenderScripts(Url, ResourceLocation.BeforeVendors)
@Html.RenderInlineScripts(Url, ResourceLocation.BeforeVendors)

<partial name="_Scripts_Bootstrap" />
<partial name="_Scripts_Validation" />
<partial name="_Scripts_Vendors_Public" />
<partial name="_Scripts_Vendors_Admin" />

@Html.RenderScripts(Url, ResourceLocation.BeforeScripts)
@Html.RenderInlineScripts(Url, ResourceLocation.BeforeScripts)

<environment names="Development,Staging,ErrorTesting">

    <script src="~/hood/js/core/production.js"></script>
    <script src="~/hood/js/core/globals.js"></script>

    <script src="~/hood/js/core/handlers.js"></script>
    <script src="~/hood/js/core/helpers.js"></script>
    <script src="~/hood/js/core/stringhelpers.js"></script>
    <script src="~/hood/js/core/validator.js"></script>

    <script src="~/hood/js/core/addresses.js"></script>
    <script src="~/hood/js/core/alerts.js"></script>
    <script src="~/hood/js/core/forms.js"></script>
    <script src="~/hood/js/core/inline.js"></script>
    <script src="~/hood/js/core/media.js"></script>

    <script src="~/hood/js/admin/content.js"></script>
    <script src="~/hood/js/admin/forums.js"></script>
    <script src="~/hood/js/admin/logs.js"></script>
    <script src="~/hood/js/admin/property.js"></script>
    <script src="~/hood/js/admin/subscriptions.js"></script>
    <script src="~/hood/js/admin/themes.js"></script>
    <script src="~/hood/js/admin/users.js"></script>

    <script src="~/hood/js/app/google.js"></script>

    <script src="~/hood/js/admin.js"></script>

</environment>
<environment names="Production,PreProduction">
    <script async defer src="@string.Format("https://hood.azureedge.net/cdn/{0}/js/admin.packaged.js", Engine.Version)" 
            asp-append-version="true"
            asp-fallback-test="$.hood.Admin"
            asp-fallback-src="~/hood/js/admin.packaged.js"></script>
</environment>
@if (_plugins.GoogleMapsApiKey.IsSet() && (_plugins.EnableGoogleMaps || _plugins.EnableGoogleGeocoding))
{
    <script async defer src="@string.Format("//maps.googleapis.com/maps/api/js?key={0}&callback=initGoogleMapsComplete{1}", _plugins.GoogleMapsApiKey, _plugins.EnableGoogleGeocoding ? "&libraries=places" : "")"></script>
}

@Html.RenderScripts(Url, ResourceLocation.AfterScripts)
@Html.RenderInlineScripts(Url, ResourceLocation.AfterScripts)
