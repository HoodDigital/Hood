@model MediaListModel
<partial name="_Media_Directories" />
<button class="create-directory btn btn-success btn-sm btn-block m-t-md" type="button"><i class="fa fa-plus"></i> Create new directory...</button>
<hr class="mt-4 mb-4" />
<input asp-for="Action" type="hidden" />
<input asp-for="Entity" type="hidden" />
<input asp-for="Field" type="hidden" />
<input asp-for="Id" type="hidden" />
<input asp-for="PageIndex" type="hidden" />
<input asp-for="PageSize" type="hidden" />
<input asp-for="Tag" type="hidden" />
<input asp-for="Type" type="hidden" />
<input asp-for="Directory" type="hidden" class="refresh-on-change" />
<div class="form-group floating-label">
    <input asp-for="Search" class="form-control">
    <label asp-for="Search"></label>
</div>
<div class="form-group floating-label">
    <select asp-for="GenericFileType" asp-items="Html.GetEnumSelectList<GenericFileType>()" class="form-control refresh-on-change">
        <option value="">Show All</option>
    </select>
    <label asp-for="GenericFileType"></label>
</div>
<div class="form-group floating-label">
    <select class="form-control refresh-on-change" asp-for="Order" data-selected="DateDesc">
        <option value="DateDesc">Newest First</option>
        <option value="Date">Oldest First</option>
        <option value="Title">By Title (A-Z)</option>
        <option value="TitleDesc">By Title (Z-A)</option>
        <option value="Filename">By Filename (A-Z)</option>
        <option value="FilenameDesc">By Filename (Z-A)</option>
        <option value="Size">By File Size (&#8593;-&#8595;)</option>
        <option value="SizeDesc">By File Size (&#8595;-&#8593;)</option>
    </select>
    <label asp-for="Order"></label>
</div>
<button type="submit" class="btn btn-success btn-block"> Search</button>
