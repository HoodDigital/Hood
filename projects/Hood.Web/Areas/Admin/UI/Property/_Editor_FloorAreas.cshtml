@model PropertyListing
@inject IContentRepository _data
@{
    PropertySettings _propertySettings = Engine.Settings.Property;
}
<div id="floorareas" class="tab-pane">
    <h5 class="mt-2 mb-0">Floor Areas</h5>
    <p>You can list floor areas in the property in square metres or square feet.</p>
    <div id="property-floors-list" class="hood-inline refresh mb-3" data-url="@Url.Action("FloorAreas", new { id = Model.Id })">
         <partial name="_List_PropertyFloorAreas" />
    </div>
    <a class="btn btn-success hood-modal" asp-action="CreateFloorArea" asp-route-id="@Model.Id" data-complete="$.hood.Property.CreateFloorArea">
        <i class="fa fa-plus-circle mr-2"></i>Add a floor area
    </a>
</div>

