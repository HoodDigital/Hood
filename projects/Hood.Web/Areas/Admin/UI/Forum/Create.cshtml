@model Forum
@{
    Layout = null;
}
<div class="sidebar-container">
    <div class="sidebar-title create">
        <button type="button" class="close close-blade"><span>&times;</span></button>
        <h3>Create new Forum</h3>
        <p><i class="fa fa-plus-circle"></i> Add a new Forum to the website.</p>
    </div>
    <div class="sidebar-content">
        <form method="post" id="create-forum-form">
            <div class="blade-field">
                <label for="Title" class="control-label">Forum Name</label>
                <div>
                    <input asp-for="Title" class="form-control" />
                </div>
                <span asp-validation-for="Title"></span>
            </div>
            <div class="blade-field">
                <label asp-for="Description" class="control-label">Description</label>
                <div>
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>
                <span asp-validation-for="Description"></span>
            </div>
            <div class="blade-field">
                <div class="form-group">
                    <label class="control-label">Create as</label>
                    <div class="">
                        <select asp-for="Published" class="form-control">
                            <option value="false">Draft</option>
                            <option value="true">Published</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="blade-field">
                <button type="button" id="create-forum-submit" class="btn btn-primary"><i class="fa fa-content-plus"></i> Create Forum</button>
                <button type="button" class="btn btn-default close-blade"><i class="fa fa-ban"></i> Cancel</button>
            </div>
        </form>
    </div>
</div>
