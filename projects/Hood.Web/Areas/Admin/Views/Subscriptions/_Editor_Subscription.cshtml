@model Subscription
@inject IContentRepository _data

@{
    PropertySettings _propertySettings = _settings.GetPropertySettings();
}
<input asp-for="Id" type="hidden" />
<input asp-for="StripeId" type="hidden" />
<input asp-for="Amount" type="hidden" />
<input asp-for="Created" type="hidden" />
<input asp-for="Currency" type="hidden" />
<input asp-for="Interval" type="hidden" />
<input asp-for="IntervalCount" type="hidden" />
<input asp-for="LiveMode" type="hidden" />
<input asp-for="StatementDescriptor" type="hidden" />
<input asp-for="TrialPeriodDays" type="hidden" />
<input asp-for="CreatedBy" type="hidden" />
<input asp-for="LastEditedOn" type="hidden" />
<input asp-for="LastEditedBy" type="hidden" />

<div class="panel-body">
    <h4 class="font-bold">
        <span>Subscription Settings</span>
    </h4>
    <fieldset class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-3 control-label" asp-for="Name"></label>
            <div class="col-sm-8"><input asp-for="Name" type="text" class="form-control" /></div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" asp-for="Description"></label>
            <div class="col-sm-8"><textarea asp-for="Description" type="text" class="form-control"></textarea></div>
        </div>
        <hr />
        <div class="form-group">
            <label class="col-sm-3 control-label">Image</label>
            <div class="col-sm-8">
                <div class="row image-cell">
                    <div class="col-xs-1">
                        <fixedImage src="@Model.FeaturedImageUrl" class="img img-xxs img-circle subscription-@Model.Id" />
                    </div>
                    <div class="col-xs-11">
                        <div class="input-group">
                            <input asp-for="FeaturedImageUrl" type="text" class="form-control subscription-@Model.Id" placeholder="Enter a url..." />
                            <span class="input-group-btn">
                                <button class="btn btn-default hood-image-set" data-target=".subscription-@Model.Id" data-restrict="image" type="button"><i class="fa fa-camera"></i></button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" asp-for="StripeId"></label>
            <div class="col-sm-8">
                <input asp-for="StripeId" type="text" class="form-control" disabled />
                <small>@Html.DescriptionTextFor(m => m.StripeId)</small>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" asp-for="Amount"></label>
            <div class="col-sm-8">
                <input asp-for="FullPrice" type="text" class="form-control" disabled />
                <small>@Html.DescriptionTextFor(m => m.Amount)</small>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" asp-for="Category"></label>
            <div class="col-sm-8">
                <input asp-for="Category" type="text" class="form-control" />
                <small>@Html.DescriptionTextFor(m => m.Category)</small>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" asp-for="Public"></label>
            <div class="col-sm-8">
                <div class="checkbox">
                    <input asp-for="Public" class="styled">
                    <label asp-for="Public"></label>
                </div>
                <small>@Html.DescriptionTextFor(m => m.Public)</small>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" asp-for="Addon"></label>
            <div class="col-sm-8">
                <div class="checkbox">
                    <input asp-for="Addon" class="styled">
                    <label asp-for="Addon"></label>
                </div>
                <small>@Html.DescriptionTextFor(m => m.Addon)</small>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" asp-for="Level"></label>
            <div class="col-sm-8">
                <input asp-for="Level" type="text" class="form-control" />
                <small>@Html.DescriptionTextFor(m => m.Level)</small>
            </div>
        </div>
    </fieldset>
</div>
