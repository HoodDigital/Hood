@{
    Layout = null;
}
<div class="sidebar-container">
    <div class="sidebar-title create">
        <button type="button" class="close close-blade"><span>&times;</span></button>
        <h3><i class="fa fa-user-plus"></i> Create new user</h3>
        <p><i class="fa fa-plus-circle"></i> Add a new user account to the website.</p>
    </div>
    <form id="create-user-form" asp-antiforgery="true" autocomplete="off">
        <!-- fake fields are a workaround for chrome autofill getting the wrong fields -->
        <input style="display:none" type="text" name="fakeusernameremembered" />
        <input style="display:none" type="password" name="fakepasswordremembered" />

        <div class="blade-field">
            <createField db-field="cuFirstName" field-type="text" field-name="First Name" db-value="" />
        </div>
        <div class="blade-field">
            <createField db-field="cuLastName" field-type="text" field-name="Last Name" db-value="" />
        </div>
        <div class="blade-field">
            <createField db-field="cuUserName" field-type="email" field-name="E-mail Address" db-value="" />
        </div>
        <div class="blade-field">
            <createField db-field="cuGeneratePassword" field-type="switch" field-name="Generate password" db-value="" />
            <hr />
            <createField db-field="cuPassword" field-type="text" field-name="Temporary Password" db-value="" />
        </div>
        <div class="blade-field">
            <createField db-field="cuNotifyUser" field-type="switch" field-name="Notify user" db-value="" />
        </div>
        <div class="blade-field">
            <button type="button" id="create-user-submit" class="btn btn-primary"><i class="fa fa-user-plus"></i> Create user</button>
            <button type="button" class="btn btn-default close-blade"><i class="fa fa-ban"></i> Cancel</button>
        </div>
    </form>
</div>
