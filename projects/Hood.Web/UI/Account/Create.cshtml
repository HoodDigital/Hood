@model RegisterCodeViewModel
@inject SignInManager<ApplicationUser> SignInManager
@inject IContentRepository _content
@{
    ViewData["Title"] = "Create an Account";
    Layout = "_LoginLayout";
}
<div class="header">
    <h2>Create an Account</h2>
    <p>Already have an account?<br />Click here to <a asp-action="Login">log in</a>.</p>
</div>
<form asp-controller="Account" asp-action="Create" method="post" class="" role="form">
    <div asp-validation-summary="All" class="validation-summary"></div>
    <div class="form-group">
        <div class="floating-label">
            <input asp-for="Email" class="form-control" placeholder="Email address" />
            <label asp-for="Email"></label>
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <p>
        <button type="submit" class="btn btn-block btn-success">Create account</button>
        <span class="d-block m-2 text-center">or</span>
        <a asp-action="Login" class="btn btn-block btn-outline-dark">Log in</a>
    </p>
</form>
