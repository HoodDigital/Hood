@model UserSubscription
<div class="nav nav-pills flex-column">
    <a class="nav-link nav-item bg-light" data-toggle="modal" href="@string.Format("#edit-subscription-{0}", Model.Id)">
        <span class="float-right">
            @Model.StatusBadge
        </span>
        Subscription - @Model.Subscription.Name
    </a>
</div>
<div class="modal fade modal-right" id="@string.Format("edit-subscription-{0}", Model.Id)" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Subscription - @Model.Subscription.Name</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <partial name="_Subscriptions_CurrentInfo" model="@new UserSubscriptionInfo(Model)" />
            </div>
        </div>
    </div>
</div>
