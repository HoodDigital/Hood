@model Forum
<div id="info" class="tab-pane active">
    <div class="panel-body">
        <fieldset class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-3 control-label">Title</label>
                <div class="col-sm-8"><input asp-for="Title" type="text" class="form-control" /></div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Description</label>
                <div class="col-sm-8"><textarea asp-for="Description" type="text" class="form-control"></textarea></div>
            </div>
            <h5 class="m-t-lg">Content</h5>
            <textarea asp-for="Body" class="tinymce-full">
                @Model.Body
            </textarea>
        </fieldset>
    </div>
</div>
