@inject IThemesService _themes
<environment names="Development,Staging,ErrorTesting">
    <link rel="stylesheet" href="@string.Format("~/themes/{0}/css/styles.css", _themes.CurrentTheme)" asp-append-version="true" />
</environment>
<environment names="Production,PreProduction">
    <link rel="stylesheet" href="@string.Format("~/themes/{0}/css/styles.min.css", _themes.CurrentTheme)" asp-append-version="true" />
</environment>
