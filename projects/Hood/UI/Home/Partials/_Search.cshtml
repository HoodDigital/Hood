@model ContentModel
<div class="sidebar-widget m-b-lg">
    <h4>Search</h4>
    <hr />
    <form action="/@Model.ContentType.Slug">
        <div class="row">
            <div class="col-xs-8">
                <label for="search" class="hidden">Search</label>
                <input class="form-control" type="text" value="@Model.Search" placeholder="Search Here" name="search" id="search">
            </div>
            <div class="col-xs-4">
                <button class="btn btn-block" type="submit">Search</button>
            </div>
        </div>
    </form>
</div>
