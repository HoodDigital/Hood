@model Post
@{
    var _account = Context.GetAccountInfo();
}
<div class="post" id="@string.Format("post-{0}", Model.Id)">
    <div class="row">
        <div class="col-md-10">
            <div class="post-content">
                @if (Model.ReplyId.HasValue)
                {
                    <p class="reply">
                        This is a reply to
                        <a asp-action="ShowTopic" asp-route-id="@Model.TopicId" asp-route-title="@Model.Topic.Title" asp-route-highlight="@Model.ReplyId">Original Post</a>.
                    </p>
                }
                @Html.Raw(Model.HtmlBody)
            </div>
        </div>
        <div class="col-md-2 text-right">
            <a class="btn btn btn-success m-b-xs" asp-action="ShowTopic" asp-route-id="@Model.TopicId" asp-route-title="@Model.Topic.Title" asp-route-reply="@Model.Id">Reply</a><br />
            <a class="btn btn-xs btn-info" asp-action="ReportPost" asp-route-id="@Model.Id">Report</a>
        </div>
    </div>
    <hr />
    <div class="post-content">
        @Html.Raw(Model.Signature)
    </div>
