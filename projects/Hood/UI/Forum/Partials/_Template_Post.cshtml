            <button type="button" id="dropdownMenu2" class="dropdown-toggle btn btn-default" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-smile-o"></i>
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                <a class="reaction plus" data-reaction="plus"></a>
                <a class="reaction minus" data-reaction="minus"></a>
                <a class="reaction confused" data-reaction="confused"></a>
                <a class="reaction smiley" data-reaction="smiley"></a>
                <a class="reaction joy" data-reaction="joy"></a>
            </div>
        </div>*@
    <p class="pull-right">
        @if (User.Identity.IsAuthenticated &&
  (Model.AuthorId == _account.User.Id ||
    User.IsInRole("Administrator") ||
    User.IsInRole("Moderator")))
        {
            <a class="btn btn-xs btn-warning m-r-xs" asp-action="EditPost" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-xs btn-danger m-r-xs" asp-action="DeletePost" asp-route-id="@Model.Id">Delete</a>
        }
    </p>
    <p class="stats">
        <span class="m-r-sm"><i class="fa fa-user m-r-xs"></i> @Model.Topic.Author.FullName</span>
        <span><i class="fa fa-clock-o m-r-xs"></i> @Model.Topic.CreatedOn.ToHumaneDate()</span>
    </p>
</div>