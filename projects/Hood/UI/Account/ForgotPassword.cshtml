@model ForgotPasswordViewModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Forgotten your password?";
}
<div class="login-block-header">
    <h2>@ViewData["Title"]</h2>
</div>
<form asp-controller="Account" asp-action="ForgotPassword" method="post" role="form">
    <div asp-validation-summary="All" class="validation-summary"></div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
            <input asp-for="Email" class="form-control" placeholder="Enter your email address..." />
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div>
            <button type="submit" class="btn btn-block">Find my account...</button>
        </div>
    </div>
</form>
