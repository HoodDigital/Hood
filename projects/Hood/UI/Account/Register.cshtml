@model RegisterViewModel
@inject IContentRepository _content
@{
    ViewData["Title"] = "Create an Account";
    Layout = "_LoginLayout";
}
<div class="header">
    <h2>@ViewData["Title"]</h2>
    <p>Already have an account?<br />Click here to <a asp-action="Login">log in</a>.</p>
</div>
<form asp-controller="Account" asp-action="Register" method="post" class="" role="form">
    @Html.RenderHoneypotField()
    <div asp-validation-summary="All" class="validation-summary"></div>
    <div class="form-group">
        <div class="floating-label">
            <input asp-for="Email" class="form-control" placeholder="Email address" />
            <label asp-for="Email"></label>
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="floating-label">
            <input asp-for="Password" class="form-control" placeholder="Choose your password..." />
            <label asp-for="Password"></label>
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="floating-label">
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password..." />
            <label asp-for="ConfirmPassword"></label>
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="custom-control custom-checkbox">
            <input asp-for="Consent" class="custom-control-input" type="checkbox" />
            <label asp-for="Consent" class="custom-control-label">
                <strong>Consent to storing your details.</strong><br />
                <small>
                    In order to register, we require your consent to store data relating to your account.
                For more information please read our <a href="/privacy">Privacy Policy</a>.
                </small>
            </label>
        </div>
    </div>
    <p>
        <button type="submit" class="btn btn-block btn-success">Create Account</button>
    </p>
</form>
