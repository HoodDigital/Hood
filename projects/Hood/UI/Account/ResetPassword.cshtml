@model ResetPasswordViewModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Reset password";
}
<div class="header">
    <h2>@ViewData["Title"]</h2>
    <p>Enter your email address, and choose a new password to reset your account.</p>
</div>
<form asp-controller="Account" asp-action="ResetPassword" method="post" role="form">
    <div asp-validation-summary="All" class="validation-summary"></div>
    <input asp-for="Code" type="hidden" />
    <div class="form-group">
        <div class="floating-label">
            <input asp-for="Email" class="form-control" placeholder="Email address" />
            <label asp-for="Email"></label>
        </div>        
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="floating-label">
            <input asp-for="Password" class="form-control" />
        <label asp-for="Password"></label>
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="floating-label">
            <input asp-for="ConfirmPassword" class="form-control" />
        <label asp-for="ConfirmPassword"></label>
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <p>
        <button type="submit" class="btn btn-block btn-success">Reset password...</button>
    </p>
</form>
