@model Address
@inject IContentRepository _content
@{
    Layout = null;
}
<div class="modal fade" role="dialog" id="address-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Edit address</h4>
            </div>
            <div class="modal-body">
                <form id="address-form" asp-action="Edit">
                    <div class="form-horizontal">
                        <input type="hidden" asp-for="Id" value="@Model.Id" />
                        <input type="hidden" asp-for="UserId" value="@Model.UserId" />
                        <input type="hidden" asp-for="Latitude" />
                        <input type="hidden" asp-for="Longitude" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @*@if (integrations.EnableGoogleGeocoding && integrations.GoogleMapsApiKey.IsSet())
                        {
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <input id="address-autocomplete" onfocus="$.hood.Google.Addresses.GeoLocate()" type="text" class="form-control" value="" placeholder="Try typing in an address..." />
                                </div>
                            </div>
                        }*@
                        <div class="form-group">
                            <label asp-for="QuickName" class="col-md-4 control-label"></label>
                            <div class="col-md-6">
                                <input asp-for="QuickName" class="form-control" />
                                <span asp-validation-for="QuickName" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Number" class="col-md-4 control-label"></label>
                            <div class="col-md-6">
                                <input asp-for="Number" class="form-control" />
                                <span asp-validation-for="Number" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Address1" class="col-md-4 control-label"></label>
                            <div class="col-md-6">
                                <input asp-for="Address1" class="form-control" />
                                <span asp-validation-for="Address1" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Address2" class="col-md-4 control-label"></label>
                            <div class="col-md-6">
                                <input asp-for="Address2" class="form-control" />
                                <span asp-validation-for="Address2" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="City" class="col-md-4 control-label"></label>
                            <div class="col-md-6">
                                <input asp-for="City" class="form-control" />
                                <span asp-validation-for="City" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="County" class="col-md-4 control-label"></label>
                            <div class="col-md-6">
                                <input asp-for="County" class="form-control" />
                                <span asp-validation-for="County" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Country" class="col-md-4 control-label"></label>
                            <div class="col-md-6">
                                <select class="form-control" asp-for="Country">
                                    <option value="">-- Choose a country --</option>
                                    @foreach (var itm in Countries.All)
                                    {
                                        <option value="@itm.Name">@itm.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="Country" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Postcode" class="col-md-4 control-label"></label>
                            <div class="col-md-6">
                                <input asp-for="Postcode" class="form-control" />
                                <span asp-validation-for="Postcode" class="text-danger" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="address-form-submit">Save Address</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
