    <None Remove="Areas\Admin\Views\Property\_Editor_Info.cshtml" />
    <None Remove="Areas\Admin\Views\Property\_Editor_Media.cshtml" />
    <None Remove="Areas\Admin\Views\Property\_Editor_Metadata.cshtml" />
