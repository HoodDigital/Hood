@model ShowPropertyModel
@inject ISiteConfiguration _site
@{
    PropertySettings _settings = _site.GetPropertySettings();
    PropertyListingApi p = _site.ToPropertyListingApi(Model.Property);
}
<div class="jumbotron">
    <div class="container">
        <h1>@p.Title</h1>
        <h2>@p.ListingType</h2>
        <p class="lead">@Html.Raw(p.ShortDescription)</p>
        <p>
            @if (p.InfoDownload != null)
            {
                <a class="btn btn-default" href="@p.InfoDownload.DownloadUrl"><i class="fa fa-file-pdf-o"></i> Download info pack</a>
            }
            <a class="btn btn-default" href="@string.Format("/contact?subject={0}#contact-form", p.ToFormat(AddressFormat.SingleLine))">Enquire <i class="fa fa-long-arrow-right"></i></a>
        </p>
    </div>
</div>
<div class="container ptb-60">
    <div class="row">
        <div class="col-sm-4">
            <a href="@p.FeaturedImage.LargeUrl" class="colorbox"><img src="@p.FeaturedImage.MediumUrl" class="img-full content-feature-@p.Id m-b-xs" /></a>
            <div class="gallery">
                @foreach (var media in Model.Property.Media)
                {
                    <a href="@media.LargeUrl" class="colorbox"><fixedImage src="@media.SmallUrl" class="img-xs content-feature-@media.Id m-b-xs"></fixedImage></a>
                }
            </div>
            <div class="p-md bg-color-lighten text-center">
                <p>
                    @Html.Raw(p.ToFormat(AddressFormat.MultiLine))
                </p>
                <a class="btn btn-block m-t-lg btn-default" href="@string.Format("/contact?subject={0}#contact-form", p.ToFormat(AddressFormat.SingleLine))">Make an Enquiry</a>
                @if (p.InfoDownloadId != null)
                {
                    <a class="btn btn-block btn-default m-t-lg" href="@p.InfoDownload.DownloadUrl"><i class="fa fa-file-pdf-o"></i> Download info pack</a>
                }
            </div>
            <div class="p-md bg-color-lighten m-t-xs">
                <ul class="media-list no-margin">
                    @if (p.Rent.HasValue)
                    {
                        <li class="media">
                            <div class="media-left">
                                <i class="fa fa-money fa-2x"></i>
                            </div>
                            <div class="media-body">
                                <h4 class="no-margin">Rent</h4>
                                <p>@string.Format(p.RentDisplay, p.FormattedRent)</p>
                            </div>
                        </li>

                    }
                    @if (p.AskingPrice.HasValue)
                    {
                        <li class="media">
                            <div class="media-left">
                                <i class="fa fa-money fa-2x"></i>
                            </div>
                            <div class="media-body">
                                <h4 class="no-margin">Asking Price</h4>
                                <p>@string.Format(p.AskingPriceDisplay, p.FormattedAskingPrice)</p>
                            </div>
                        </li>
                    }
                    @if (p.Premium.HasValue)
                    {
                        <li class="media">
                            <div class="media-left">
                                <i class="fa fa-money fa-2x"></i>
                            </div>
                            <div class="media-body">
                                <h4 class="no-margin">Premium</h4>
                                <p>@string.Format(p.PremiumDisplay, p.FormattedPremium)</p>
                            </div>
                        </li>
                    }
                </ul>
            </div>
            <div class="p-md bg-color-lighten m-t-xs">
                <h4 class="no-margin">Areas</h4>
                <hr />
                @if (p.FloorAreas?.Count > 0)
                {
                    @foreach (var floor in p.FloorAreas)
                    {
                        <div class="row m-b-xs">
                            <div class="col-xs-4"><strong>@floor.Name</strong></div>
                            <div class="col-xs-8">
                                @floor.SquareMetres.ToString("N0") m<sup>2</sup>
                                [@floor.SquareFeet.ToString("N0") sq. ft.]
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="no-margin">There are no floor areas added yet...</p>
                }
            </div>
        </div>
        <div class="col-sm-8">
            <div class="m-b-md">
                <h2>@p.Title</h2>
                <p class="lead">@Html.Raw(p.ShortDescription)</p>
            </div>
            <blockquote>
                <h5 class="no-margin">@_settings.GetPlanningFromType(p.Planning)</h5>
                <p class="m-t-sm">
                    @if (p.InfoDownload != null)
                    {
                        <a class="btn btn-default" href="@p.InfoDownload.DownloadUrl"><i class="fa fa-file-pdf-o"></i> Download info pack</a>
                    }
                    <a class="btn btn-default" href="@string.Format("/contact?subject={0}#contact-form", p.ToFormat(AddressFormat.SingleLine))">Enquire <i class="fa fa-long-arrow-right"></i></a>
                </p>
            </blockquote>
            <h5>Description</h5>
            @if (p.Description.IsSet())
            {
                <blockquote class="pre-line">@Html.Raw(p.Description)</blockquote>
            }
            else
            {
                <blockquote>No description has been added to this property yet...</blockquote>
            }
            @if (p.Location.IsSet())
            {
                <h5>About the Location</h5>
                <blockquote class="pre-line">@Html.Raw(@p.Location)</blockquote>
            }
            @if (p.Lease.IsSet())
            {
                <h5>About the Lease</h5>
                <blockquote class="pre-line">@Html.Raw(@p.Lease)</blockquote>
            }
            @if (p.Areas.IsSet())
            {
                <h5>About the Internal Areas</h5>
                <blockquote class="pre-line">@Html.Raw(@p.Areas)</blockquote>
            }
            @if (p.Additional.IsSet())
            {
                <h5>Additional Information</h5>
                <blockquote class="pre-line">@Html.Raw(@p.Additional)</blockquote>
            }
            <h5>Contact the Agent</h5>
            @if (p.AgentInfo.IsSet())
            {
                <blockquote class="pre-line">
                    @Html.Raw(@p.AgentInfo)
                </blockquote>
            }
        </div>
    </div>
    @if (Model.Similar != null && Model.Similar.Count > 0)
    {
        <div class="row">
            <h4>Some of our other properties</h4>
            <div class="portfolio-carousel owl-carousel owl-theme">
                @foreach (PropertyListingApi similar in Model.Similar.Select(similar => _site.ToPropertyListingApi(similar)))
                {
                    await Html.RenderPartialAsync("_PropertyCard", similar);
                }
            </div>
        </div>
    }
</div>
