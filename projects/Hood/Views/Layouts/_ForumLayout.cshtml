@{
    Layout = "_Layout";
    Forum forum = ViewData["Forum"] as Forum;
}
@section styles {
    @RenderSection("styles", required: false)
}
@section scripts {
    @RenderSection("scripts", required: false)
}
@section metas {
    @RenderSection("metas", required: false)
}
<div class="jumbotron">
    <div class="container">
        <h1>News Layout</h1>
        <p>This is the News Layout - it can be overwritten in your theme directory by copying <code>/Views/Layouts/_NewsLayout.cshtml</code> to match in your themes directory <code>/Themes/{YOURTHEME}/Views/Layouts/_NewsLayout.cshtml</code></p>
    </div>
</div>
<section class="container">
    @RenderBody()
</section>
