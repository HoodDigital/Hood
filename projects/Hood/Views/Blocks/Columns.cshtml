@{
    Layout = null;
    bool icons = true;
    bool.TryParse(Context.Request.Query["icons"], out icons);
    bool buttons = true;
    bool.TryParse(Context.Request.Query["buttons"], out buttons);
    int rows = 1;
    int.TryParse(Context.Request.Query["rows"], out rows);
    int cols = 3;
    int.TryParse(Context.Request.Query["cols"], out cols);
    var align = Context.Request.Query["align"];
    var heading = Context.Request.Query["heading"];
    var cssClass = Context.Request.Query["class"];
}
<div class="hood-block">
    @for (int i = 0; i < rows; i++)
    {
        <div class="row @cssClass" style="@align">
            @for (int j = 0; j < cols; j++)
                {
                    var colWidth = Math.Round((double)12 / (double)cols);
                    if (colWidth < 0) { colWidth = 0; }
                    if (colWidth > 12) { colWidth = 12; }
                    string colWidthLg = "col-md-" + colWidth;

                    string colWidthSm = "col-sm-6";
                    if (colWidth > 6) { colWidthSm = "col-sm-12"; }

                    string colWidthXs = "col-xs-12";

                <div class="@colWidthXs @colWidthSm @colWidthLg">
                    @if (icons)
                    {
                        <figure class="img img-md img-circle hood-image-switch" style="background-image:url(/lib/hood/images/no-image.jpg);">
                            <img src="~/lib/hood/images/no-image.jpg" alt="Generic placeholder image" width="140" height="140" />
                        </figure>
                    }
                    @switch (heading)
                    {
                        case "h1":
                            <h1 class="tinymce-text" style="@align">Dummy Heading...</h1>
                            break;
                        case "h2":
                            <h2 class="tinymce-text" style="@align">Dummy Heading...</h2>
                            break;
                        case "h3":
                            <h3 class="tinymce-text" style="@align">Dummy Heading...</h3>
                            break;
                        case "h4":
                            <h4 class="tinymce-text" style="@align">Dummy Heading...</h4>
                            break;
                        case "h5":
                            <h5 class="tinymce-text" style="@align">Dummy Heading...</h5>
                            break;

                    }
                    <p class="tinymce-text">Donec sed odio dui. Etiam porta sem malesuada magna mollis euismod. Nullam id dolor id nibh ultricies vehicula ut id elit. Morbi leo risus, porta ac consectetur ac, vestibulum at eros. Praesent commodo cursus magna.</p>
                    @if (buttons)
                    {
                        <div class="tinymce-buttons"><a class="btn btn-default" href="#" role="button">View details &raquo;</a></div>
                    }
                </div>
            }
        </div>
    }
</div>
