@model ApplicationUser
@inject ISiteConfiguration _site
@{
    ViewData["Title"] = "Your Profile";
    ApplicationUserApi uapi = _site.ToApplicationUserApi(Model);
}
<form asp-controller="Manage" asp-action="Profile" method="post" role="form" class="contact-form" id="contact">
    <div class="row">
        <div class="col-sm-4">
            <div class="team-item">
                <div class="team-item-img">
                    <fixedImage src="@uapi.Avatar.SmallUrl" class="user-profile-image avatar-@Model.Id" id="content-blade-avatar" />
                    <div class="team-item-detail">
                        <div class="team-item-detail-inner light-color">
                            <h5>@Model.FirstName @Model.LastName</h5>
                            <ul class="social">
                                @if (Model.Facebook.IsSet())
                                {
                                    <li><a href="@Model.Facebook" target="_blank"><i class="fa fa-facebook"></i></a></li>
                                }
                                @if (Model.Twitter.IsSet())
                                {
                                    <li><a href="@Model.Twitter" target="_blank"><i class="fa fa-twitter"></i></a></li>
                                }
                                @if (Model.GooglePlus.IsSet())
                                {
                                    <li><a href="@Model.GooglePlus" target="_blank"><i class="fa fa-google-plus"></i></a></li>
                                }
                                @if (Model.LinkedIn.IsSet())
                                {
                                    <li><a href="@Model.LinkedIn" target="_blank"><i class="fa fa-linkedin"></i></a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="team-item-info">
                    <h5>@Model.FirstName @Model.LastName</h5>
                    <p class="">@Model.JobTitle</p>
                </div>
            </div>
            <button class="btn btn-md btn-black m-t-lg form-full" type="submit" id="form-submit" name="submit">Save Profile</button>
        </div>
        <div class="col-sm-8">
            <div asp-validation-summary="All"></div>
            <div class="tabs">
                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active"><a href="#profile" aria-controls="password" role="tab" data-toggle="tab">Profile</a></li>
                    <li role="presentation"><a href="#socials" aria-controls="socials" role="tab" data-toggle="tab">Socials</a></li>
                </ul>
                <!-- Tab panes -->
                <div class="tab-content p-md">
                    <div role="tabpanel" class="tab-pane active" id="profile">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="FirstName" class="control-label"></label>
                                    <input asp-for="FirstName" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="LastName" class="control-label"></label>
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="JobTitle" class="control-label"></label>
                                    <input asp-for="JobTitle" class="form-control" />
                                    <span asp-validation-for="JobTitle" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="CompanyName" class="control-label"></label>
                                    <input asp-for="CompanyName" class="form-control" />
                                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Bio" class="control-label"></label>
                            <textarea asp-for="Bio" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 text-center">
                            </div>
                        </div>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="socials">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="Twitter" class="control-label"></label>
                                    <input asp-for="Twitter" class="form-control" />
                                    <span asp-validation-for="Twitter" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="TwitterHandle" class="control-label"></label>
                                    <input asp-for="TwitterHandle" class="form-control" />
                                    <span asp-validation-for="TwitterHandle" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Facebook" class="control-label"></label>
                            <input asp-for="Facebook" class="form-control" />
                            <span asp-validation-for="Facebook" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="GooglePlus" class="control-label"></label>
                            <input asp-for="GooglePlus" class="form-control" />
                            <span asp-validation-for="GooglePlus" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LinkedIn" class="control-label"></label>
                            <input asp-for="LinkedIn" class="form-control" />
                            <span asp-validation-for="LinkedIn" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 text-center">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
