@model ConfirmRequiredModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Confirm your email";
}
<div class="login-block-header">
    <h2>@ViewData["Title"]</h2>
    <p class="text-info">
        A confirmation email has been sent to your email address, please <strong>click the link inside it to confirm your email</strong> and activate your account.
        You will not be able to use the logged in areas of the site until you have confirmed your email address.
    </p>
</div>
<form asp-controller="Account" asp-action="ConfirmRequired" method="post" role="form">
    <div asp-validation-summary="All" class="validation-summary"></div>
    @if (ViewData["Success"] != null)
    {
        <div class="alert alert-success text-center">@ViewData["Success"]</div>
    }
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
            <input asp-for="Email" class="form-control" placeholder="Enter your email address..." />
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div>
            <button type="submit" class="btn btn-block">Resend my activation email...</button>
        </div>
    </div>
</form>
<hr />
<p class="text-center">
    Please <a asp-controller="Account" asp-action="Login">click here to log in</a>.
</p>
