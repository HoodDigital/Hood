@inject ISiteConfiguration _site
@{
    SeoSettings meta = _site.GetSeo();
    BasicSettings info = _site.GetBasicSettings();
    string url = Context.GetSiteUrl(true, true);
    if (meta.CanonicalUrl.IsSet())
    {
        url = string.Format("{0}{1}", meta.CanonicalUrl.TrimEnd('/'), Context.Request.Path);
    }
}
<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0" />


@if (meta.FacebookAppId.IsSet())
{
    <meta name="fb:app_id" content="@meta.FacebookAppId" />
}
@if (meta.Keywords.IsSet())
{
    <meta name="keywords" content="@meta.Keywords" />
}
<meta property="og:url" content="@url" />
<meta property="og:type" content="website" />
@if (meta.OgLocale.IsSet())
{
    <meta property="og:locale" content="@meta.OgLocale" />
}

<meta name="twitter:card" content="summary_large_image">
@if (meta.TwitterCardSite.IsSet())
{
    <meta name="twitter:site" content="@meta.TwitterCardSite">
}
@if (meta.TwitterCardCreator.IsSet())
{
    <meta name="twitter:creator" content="@meta.TwitterCardCreator" />
}
@if (meta.SiteIconUrl.IsSet())
{
    <link type="image/png" href="@meta.SiteIconUrl" rel="icon" />
}
@if (meta.Publisher.IsSet())
{
    <link href="@meta.Publisher" rel="publisher" />
}
<link href="@url" rel="canonical" />

<script type="application/ld+json">
    {
        "@@context": "http://schema.org",
        "@@type": "Organization",
        "url": "@meta.CanonicalUrl",
        "sameAs" : [
            "@meta.Twitter",
            "@meta.Facebook",
            "@meta.GooglePlus",
            "@meta.LinkedIn"
        ],
        "name" : "@info.CompanyName",
        "logo": "@meta.SiteIconUrl",
        "contactPoint" : [{
            "@@type" : "ContactPoint",
            "telephone" : "@info.Phone",
            "contactType" : "customer service"
        }]
    }
</script>