@model ContactFormModel
@inject ISiteConfiguration _site
@{
    ContactSettings settings = _site.GetContactSettings();
    IntegrationSettings integrations = _site.GetIntegrationSettings();
}
<form asp-controller="Home" asp-action="ProcessContactForm" method="post" role="form" class="contact-form" id="contact-form" data-redirect="@settings.ThankYouUrl" data-alert-message="@settings.ThankYouMessage">
    <div class="thank-you">
        <h2>@settings.ThankYouTitle</h2>
        <p>@settings.ThankYouMessage</p>
    </div>
    <div class="form">
        <h2>@settings.ContactFormTitle</h2>
        <p>@settings.ContactFormMessage</p>
        <div asp-validation-summary="All" class="validation-summary"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Your name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" placeholder="Your e-mail address" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label"></label>
            <input asp-for="PhoneNumber" class="form-control" placeholder="Your phone number" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Subject" class="control-label"></label>
            <input asp-for="Subject" class="form-control" placeholder="Subject" />
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Enquiry" class="control-label"></label>
            <textarea asp-for="Enquiry" class="form-control" placeholder="Your enquiry"></textarea>
            <span asp-validation-for="Enquiry" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-xs-12 text-center">
                @if (integrations.EnableGoogleRecaptcha)
                {
                    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
                    <div class="g-recaptcha" id="g-recaptcha"
                         data-target="#contact-form"
                         data-sitekey="@integrations.GoogleRecaptchaSiteKey"
                         data-callback="googleRecaptchaCallback"
                         data-size="invisible">
                    </div>
                }
                else
                {
                }
                <button class="btn btn-md btn-primary form-full" type="submit">Send Message</button>
            </div>
        </div>
    </div>
</form>
