@inject ISiteConfiguration _site
@{ 
    BasicSettings info = _site.GetBasicSettings();
    SeoSettings meta = _site.GetSeo();
    var OgTitle = meta.OgTitle.IsSet() ? meta.OgTitle : ViewData["Title"];
    var OgImageUrl = meta.OgImageUrl.IsSet() ? meta.OgImageUrl : "http://placehold.it/1200x630";
    var OgSecureImageUrl = meta.OgSecureImageUrl.IsSet() ? meta.OgSecureImageUrl : "http://placehold.it/1200x630";
    var TwitterCardTitle = meta.TwitterCardTitle.IsSet() ? meta.TwitterCardTitle : ViewData["Title"];
    var TwitterCardImageUrl = meta.TwitterCardImageUrl.IsSet() ? meta.TwitterCardImageUrl : "http://placehold.it/750x560";
}
@if (meta.Description.IsSet())
{
    <meta name="description" content="@meta.Description" />
}
@if (meta.OgAuthor.IsSet())
{
    <meta property="og:author" content="@meta.OgAuthor" />
}
<meta property="og:title" content="@OgTitle" />
<meta property="og:image" content="@OgImageUrl" />
<meta property="og:image:secure_url" content="@OgSecureImageUrl" />
@if (meta.OgDescription.IsSet())
{
    <meta property="og:description" content="@meta.OgDescription" />
}
<meta name="twitter:title" content="@TwitterCardTitle" />

@if (meta.TwitterCardDescription.IsSet())
{
    <meta name="twitter:description" content="@meta.TwitterCardDescription" />
}

<meta name="twitter:image" content="@TwitterCardImageUrl" />
