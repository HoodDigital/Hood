
@{ 
    BasicSettings _basicSettings = _settings.GetBasicSettings();
    SeoSettings _seoSettings = _settings.GetSeo();
    var OgTitle = _seoSettings.OgTitle.IsSet() ? _seoSettings.OgTitle : ViewData["Title"];
    var OgImageUrl = _seoSettings.OgImageUrl.IsSet() ? _seoSettings.OgImageUrl : "http://placehold.it/1200x630";
    var OgSecureImageUrl = _seoSettings.OgSecureImageUrl.IsSet() ? _seoSettings.OgSecureImageUrl : "http://placehold.it/1200x630";
    var TwitterCardTitle = _seoSettings.TwitterCardTitle.IsSet() ? _seoSettings.TwitterCardTitle : ViewData["Title"];
    var TwitterCardImageUrl = _seoSettings.TwitterCardImageUrl.IsSet() ? _seoSettings.TwitterCardImageUrl : "http://placehold.it/750x560";
}
@if (_seoSettings.Description.IsSet())
{
    <meta name="description" content="@_seoSettings.Description" />
}
@if (_seoSettings.OgAuthor.IsSet())
{
    <meta property="og:author" content="@_seoSettings.OgAuthor" />
}
<meta property="og:title" content="@OgTitle" />
<meta property="og:image" content="@OgImageUrl" />
<meta property="og:image:secure_url" content="@OgSecureImageUrl" />
@if (_seoSettings.OgDescription.IsSet())
{
    <meta property="og:description" content="@_seoSettings.OgDescription" />
}
<meta name="twitter:title" content="@TwitterCardTitle" />

@if (_seoSettings.TwitterCardDescription.IsSet())
{
    <meta name="twitter:description" content="@_seoSettings.TwitterCardDescription" />
}

<meta name="twitter:image" content="@TwitterCardImageUrl" />
