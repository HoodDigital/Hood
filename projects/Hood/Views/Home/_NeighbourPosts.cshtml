@model ContentModel

<div class="row">
    <div class="col-xs-4 text-left">
        @if (Model.Previous != null)
        {
            var papi = _settings.ToContentApi(Model.Previous);
            <a href="@papi.Url" class="item-prev">
                <i class="fa fa-long-arrow-left"></i>
                Previous @Model.Type.TypeName
            </a>
        }
    </div>
    <div class="col-xs-4 text-center">
        <a href="/@Model.Type.Type.ToLower()">
            Back to @Model.Type.Title
        </a>
    </div>
    <div class="col-xs-4 text-right">
        @if (Model.Next != null)
        {
            var napi = _settings.ToContentApi(Model.Next);
            <a href="@napi.Url" class="item-prev">
                Next @Model.Type.TypeName
                <i class="fa fa-long-arrow-right"></i>
            </a>
        }
    </div>
</div>