@model Forum
<div id="info" class="tab-pane active" role="tabpanel" aria-labelledby="info-tab">
    <div class="form-group floating-label">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <small asp-for="Title"></small>
    </div>
    <div class="form-group floating-label">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <small asp-for="Description"></small>
    </div>
    <hr class="mt-4 mb-4" />
    <div class="form-group m-0">
        <label asp-for="Body" class="sr-only"></label>
        <textarea asp-for="Body" class="tinymce-full"></textarea>
        <small asp-for="Body"></small>
    </div>
</div>
