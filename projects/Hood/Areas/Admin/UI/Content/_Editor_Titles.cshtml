@model EditContentModel
<h5>@Model.Content.ContentType.ToTitleCase() @Model.ContentType.TitleName</h5>
<div class="ibox-content">
    <fieldset class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-3 control-label">@Model.ContentType.TitleName:</label>
            <div class="col-sm-8"><input id="Title" name="Title" value="@Model.Content.Title" type="text" class="form-control" /></div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">@Model.ContentType.ExcerptName:</label>
            <div class="col-sm-8">
                @if (Model.ContentType.MultiLineExcerpt)
                {
                    <textarea id="Excerpt" name="Excerpt" class="form-control @(Model.ContentType.RichTextExcerpt ? "tinymce-simple" : "")">@Model.Content.Excerpt</textarea>
                }
                else
                {
                    <input id="Excerpt" name="Excerpt" value="@Model.Content.Excerpt" type="text" class="form-control" />
                }
            </div>
        </div>
        <input type="hidden" id="Tags" name="Tags" value="@Model.Content.TagString" />
                @*<div class="form-group">
            <label class="col-sm-3 control-label">Tags:</label>
                <div class="col-sm-8">
                <input id="Tags" name="Tags" value="@Model.Content.TagString" type="text" class="form-control" data-role="tagsinput" />
            </div>
        </div>*@
        <div class="form-group">
            <label class="col-sm-3 control-label">Show in featured list:</label>
            <div class="col-sm-8">
                <div class="checkbox">
                    <input class="styled" id="Featured" name="Featured" type="checkbox" value="true" @(Model.Content.Featured ? "checked" : "") />
                    <label for="Featured">Featured</label>
                </div>
            </div>
        </div>
    </fieldset>
</div>
