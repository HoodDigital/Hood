@model MediaSettings
@{
    ViewData["Title"] = "Media Settings";
}
<form method="post">
    <div class="wrapper wrapper-content">
        <div class="row">
            <div class="col-md-4 col-md-push-8">
                <div class="widget-head-color-box black-bg p-lg text-center">
                    <div class="m-b-md">
                        <h2 class="font-bold no-margins text-white">
                            Media Settings
                        </h2>
                    </div>
                    <button type="submit" class="btn btn-success m-t-md"><i class="fa fa-save"></i> Save @ViewData["Title"]</button>
                    <a asp-action="ResetMedia" class="btn btn-danger m-t-md warning-alert" data-warning="This will completely reset these settings to their default state, are you sure!?"><i class="fa fa-save"></i> Reset to Default</a>
                </div>
                <div class="ibox float-e-margins">
                    <div>
                        <div class="ibox-content">
                           Settings for uploading media to the site.
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8 col-md-pull-4">
                <div class="tabs-container">
                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#billing">Media Settings</a></li>
                    </ul>
                    <div class="tab-content">
                        <div id="billing" class="tab-pane active">
                            <div class="panel-body">
                                <strong>Media Settings</strong>
                                <p>
                                    Settings for uploading media to the site.
                                </p>
                            </div>
                            <div class="panel-body">
                                <div class="form-group">
                                    <label asp-for="AzureKey"></label>
                                    <input asp-for="AzureKey" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label asp-for="ContainerName"></label>
                                    <input asp-for="ContainerName" class="form-control">
                                    <small>Note: This is the container (folder) name that the site will use to store media uploads on your Azure Storage account.</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>