@model MailSettings
@{
    ViewData["Title"] = "Mail Settings";
}
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-md-4 col-md-push-8">
            <div class="widget-head-color-box black-bg p-lg text-center">
                <div class="m-b-md">
                    <h2 class="font-bold no-margins text-white">
                        Mail Settings
                    </h2>
                </div>
                <button type="submit" class="btn btn-success m-t-md" onclick="document.getElementById('settings-form').submit();"><i class="fa fa-save"></i> Save @ViewData["Title"]</button>
                <a asp-action="ResetMail" class="btn btn-danger m-t-md warning-alert" data-warning="This will completely reset these settings to their default state, are you sure!?"><i class="fa fa-save"></i> Reset to Default</a>
            </div>
            <div class="ibox float-e-margins">
                <div>
                    <div class="ibox-content">
                        Settings for site's email connections.
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8 col-md-pull-4">
            <div class="tabs-container">
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#billing">Mail Settings</a></li>
                </ul>
                <div class="tab-content">
                    <div id="billing" class="tab-pane active">
                        <div class="panel-body">
                            <h4>
                                Mail Settings
                            </h4>
                            <p>
                                Settings for site's email connections.
                            </p>
                        </div>
                        <div class="panel-body">
                            <form method="post" id="settings-form">
                                <fieldset class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" asp-for="SendGridKey"></label>
                                        <div class="col-sm-8">
                                            <input asp-for="SendGridKey" type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" asp-for="Logo"></label>
                                        <div class="col-sm-8">
                                            <div class="input-group">
                                                <input asp-for="Logo" type="url" class="form-control Logo" placeholder="Enter a url..." />
                                                <span class="input-group-btn">
                                                    <button class="btn btn-default hood-image-set" data-target=".Logo" data-restrict="image" type="button"><i class="fa fa-camera"></i></button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" asp-for="BackgroundColour"></label>
                                        <div class="col-sm-8">
                                            <div id="cp2" class="input-group colorpicker-component">
                                                <input asp-for="BackgroundColour" type="text" class="form-control" />
                                                <span class="input-group-addon">
                                                    <i></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" asp-for="FromName"></label>
                                        <div class="col-sm-8">
                                            <input asp-for="FromName" type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" asp-for="FromEmail"></label>
                                        <div class="col-sm-8">
                                            <input asp-for="FromEmail" type="text" class="form-control" />
                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                        <div class="panel-body">
                            <h4>Previews</h4>
                            <p>
                                Preview how your emails will look...
                            </p>
                            <p>
                                <a class="btn btn-default" asp-action="Plain" asp-controller="Mail" asp-area="Admin" target="_blank">Plain</a>
                                <a class="btn btn-success" asp-action="Success" asp-controller="Mail" asp-area="Admin" target="_blank">Success Message</a>
                                <a class="btn btn-warning" asp-action="Warning" asp-controller="Mail" asp-area="Admin" target="_blank">Warning Message</a>
                                <a class="btn btn-danger" asp-action="Danger" asp-controller="Mail" asp-area="Admin" target="_blank">Danger Message</a>
                            </p>
                        </div>
                        <div class="panel-body">
                            <h4>
                                Send a test email
                            </h4>
                            <p class="m-b-lg">
                                Send a test version of this email to a specified email address...
                            </p>
                            <form asp-action="Test" asp-controller="Mail" method="post">
                                <fieldset class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" for="email">Email address</label>
                                        <div class="col-sm-8">
                                            <input id="email" name="email" type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" for="email">Template</label>
                                        <div class="col-sm-8">
                                            <select id="template" name="template" type="text" class="form-control">
                                                <option value="@MailSettings.PlainTemplate">Plain</option>
                                                <option value="@MailSettings.SuccessTemplate">Success</option>
                                                <option value="@MailSettings.WarningTemplate">Warning</option>
                                                <option value="@MailSettings.DangerTemplate">Danger</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-3"></div>
                                        <div class="col-sm-8">
                                            <button type="submit" class="btn btn-primary m-t-md"><i class="fa fa-envelope"></i> Send Test</button>
                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
