@model ContentListModel
@inject ISiteConfiguration _site;
@{
    ViewBag.Title = "Manage Subscriptions";
}
@section buttons {
    <a class="btn btn-sm btn-warning" asp-action="Stripe"><i class="fa fa-cc-stripe m-r-sm"></i>Stripe Subscriptions</a>
    <a class="btn btn-sm btn-primary create-subscription"><i class="fa fa-thumb-tack m-r-sm"></i>Create New</a>
}
<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content">
            <div class="ibox">
                <div class="ibox-title">
                    <form>
                        <div class="row m-b-sm m-t-sm">
                            <div class="col-md-6">
                                <h4>Sort</h4>
                                <select class="form-control manage-subscription-change" name="manage-subscription-sort" id="manage-subscription-sort" data-selected="PublishDateDesc">
                                    <optgroup label="Subscription">
                                        <option value="name">Name (A-Z)</option>
                                        <option value="name+desc">Name (Z-A)</option>
                                        <option value="date+desc">Added Date (Newest)</option>
                                        <option value="date">Added Date (Oldest)</option>
                                    </optgroup>
                                    <optgroup label="Price">
                                        <option value="price+desc">Price (£££-£)</option>
                                        <option value="price">Price (£-£££)</option>
                                    </optgroup>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <h4>Search</h4>
                                <div class="input-group">
                                    <input name="manage-subscription-search" id="manage-subscription-search" type="text" placeholder="Search" class="form-control">
                                    <span class="input-group-btn">
                                        <button type="button" class="btn btn-primary manage-subscription-click"> Search!</button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="ibox-content">
                    <div id="manage-subscription-list" class="border-box-sizing"></div>
                    <div class="manage-subscription-pager text-center m-lg"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<script id="manage-subscription-template" type="text/template">
    <div class="forum-item data-item">
        <div class="row">
            <div class="col-md-4">
                <div class="media">
                        <div class="media-left media-middle">
                            #if (FeaturedImageUrl.length > 0) {#
                            <figure class="img-xs content-feature-1 hood-image " style="background-image:url(${ FeaturedImageUrl });"><img src="${ FeaturedImageUrl }" alt=""></figure>
                            #}else{#
                            <figure class="img-xs content-feature-1 hood-image " style="background-image:url(/lib/hood/images/no-image.jpg);"><img src="/lib/hood/images/no-image.jpg" alt=""></figure>
                            #}#
                        </div>
                    <div class="media-body">
                        <a class="forum-item-title" href="/admin/subscriptions/edit/${ Id }">
                            ${ Name }
                        </a>
                        <small><i class="fa fa-clock-o"></i> Created on #= kendo.toString(new Date(Created), "ddd d, MMMM yyyy at hh:mm tt") #</small><br />
                    </div>
                </div>
            </div>
            <div class="col-md-1">
                <span class="small font-bold">Stripe Id</span>
                <div class="tag-list">
                    <span class="tag-item">${ StripeId }</span>
                </div>
            </div>
            <div class="col-md-1">
                <span class="small font-bold">Subscribers</span>
                <div class="tag-list">
                    <span class="tag-item">${ ActiveSubscribers }</span>
                </div>
            </div>
            <div class="col-md-1">
                <span class="small font-bold">Type</span>
                <div class="tag-list">
                    #if (!Addon) {#
                        <span class="tag-item">Tiered: Level ${ Level }</span>
                    #}else{#
                        <span class="tag-item">Addon</span>
                    #}#
                </div>
            </div>
            <div class="col-md-2">
                <span class="small font-bold">Price</span>
                <div class="tag-list">
                    <span class="tag-item">${ FullPrice }</span>
                </div>
            </div>
            <div class="col-md-3 action-buttons">
                <a class="btn-primary btn btn-sm action-button" href="/admin/subscriptions/edit/${ Id }"><i class="fa fa-edit"></i><span>&nbsp;Edit</span></a>
                #if (SubscriberCount==0){#
                    <a class="btn-danger btn btn-sm action-button delete-subscription" data-id="${ Id }"><i class="fa fa-trash-o"></i><span>&nbsp;Delete</span></a>
                #} else {#
                    <a class="btn-info btn btn-sm action-button"  href="/admin/subscribers?subscription=${ StripeId }"><i class="fa fa-users"></i><span>&nbsp;Subscribers</span></a>
                #}#
            </div>
        </div>
    </div>
</script>
