@model Subscription
@inject IContentRepository _data
@inject ISiteConfiguration _site
@{
    PropertySettings settings = _site.GetPropertySettings();
}
<input asp-for="Id" type="hidden" />
<input asp-for="StripeId" type="hidden" />
<input asp-for="Amount" type="hidden" />
<input asp-for="Created" type="hidden" />
<input asp-for="Currency" type="hidden" />
<input asp-for="Interval" type="hidden" />
<input asp-for="IntervalCount" type="hidden" />
<input asp-for="LiveMode" type="hidden" />
<input asp-for="StatementDescriptor" type="hidden" />
<input asp-for="TrialPeriodDays" type="hidden" />
<input asp-for="CreatedBy" type="hidden" />
<input asp-for="LastEditedOn" type="hidden" />
<input asp-for="LastEditedBy" type="hidden" />

<div class="tabs-container m-b-lg">
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#info" aria-expanded="true"> Subscription Info</a></li>
        <li><a data-toggle="tab" href="#info" aria-expanded="true"> Feature List<small> (Coming Soon)</small></a></li>
    </ul>
    <div class="tab-content">
        <div id="info" class="tab-pane active">
            <div class="panel-body">
                <fieldset class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Name:</label>
                        <div class="col-sm-8"><input asp-for="Name" type="text" class="form-control" /></div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Description:</label>
                        <div class="col-sm-8"><textarea asp-for="Description" type="text" class="form-control"></textarea></div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Image Url:</label>
                        <div class="col-sm-8">
                            <div class="row image-cell">
                                <div class="col-xs-1">
                                    <img src="@(Model.FeaturedImageUrl.IsSet() ? Model.FeaturedImageUrl : _site.GetMediaSettings().NoImage.IsSet() ? _site.GetMediaSettings().NoImage : "/lib/hood/images/no-image.jpg")" class="img-xxs img-circle subscription-@Model.Id" />
                                </div>
                                <div class="col-xs-11">
                                    <div class="input-group">
                                        <input asp-for="FeaturedImageUrl" type="text" class="form-control subscription-@Model.Id" placeholder="Enter a url..." />
                                        <span class="input-group-btn">
                                            <button class="btn btn-default hood-image-set" data-target=".subscription-@Model.Id" data-restrict="image" type="button"><i class="fa fa-camera"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Colour:</label>
                        <div class="col-sm-8"><input asp-for="Colour" type="text" class="form-control" /></div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Public Subscription:</label>
                        <div class="col-sm-8">
                            <div class="checkbox">
                                <input asp-for="Public" class="styled">
                                <label asp-for="Public"></label>
                            </div>
                            <small>Note: Users can add themselves to this subscription from the default subscription upgrade pages.</small>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Addon Subscription:</label>
                        <div class="col-sm-8">
                            <div class="checkbox">
                                <input asp-for="Addon" class="styled">
                                <label asp-for="Addon"></label>
                            </div>
                            <small>Note: If set as an Addon, this will not appear as a tiered level of subscription.</small>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Tiered Level:</label>
                        <div class="col-sm-8">
                            <input asp-for="Level" type="text" class="form-control" />
                            <small>Note: The level of the subscription (higher denotes more expense). Not valid for Addon subscriptions.</small>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
</div>
