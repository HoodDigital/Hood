@model PagedList<ApplicationUser>
@{
    var url = string.Format("{0}?&search={1}&sort={2}", Context.GetSiteUrl(true), ViewData["search"], ViewData["sort"]) + "page={0}&size={1}";
}
<div div class="m-lg text-center">
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li><a href="@string.Format(url,  Model.CurrentPage - 1, Model.PageSize)" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a></li>
        }
        @for (int i = Model.CurrentPage - 2; i <= Model.CurrentPage + 2; i++)
        {
            if (i > 0 && i <= Model.Pages)
            {
                if (i == Model.CurrentPage)
                {
                    <li class="active"><a href="@string.Format(url, i, Model.PageSize)">@i</a></li>
                }
                else
                {
                    <li><a href="@string.Format(url, i, Model.PageSize)">@i</a></li>
                }
            }
        }
        @if (Model.CurrentPage < Model.Pages)
        {
            <li><a href="@string.Format(url,  Model.CurrentPage + 1, Model.PageSize)" aria-label="Next"><span aria-hidden="true">&raquo;</span></a></li>
        }
    </ul>
</div>
