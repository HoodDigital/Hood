@model ContentModel
<div class="row">
    <div class="col">
        <div class="blog-post">
            <h2>@Model.Content.Title</h2>
            @if (Model.Content.ShowAuthor)
            {
                <p>
                    <span class="me-3"><i class="fa fa-user"></i> <a href="@string.Format("/{0}/author/{1}", Model.ContentType.Type.ToLower(), Model.Content.Author.UserName)">@Model.Content.Author.ToDisplayName()</a></span>
                    <span><i class="fa fa-clock"></i> @Model.Content.PublishDate.ToLongDateString() at @Model.Content.PublishDate.ToShortTimeString()</span>
                </p>
            } 
            else
            {
                <p>
                    <span><i class="fa fa-clock"></i> @Model.Content.PublishDate.ToLongDateString() at @Model.Content.PublishDate.ToShortTimeString()</span>
                </p>
            }
            <p>@Model.Content.Excerpt</p>
            <partial name="_FeaturedMedia" model="Model.Content" />
            <div id="post-content">
                @if (Model.Content.Body.IsSet())
                {
                    @Html.Raw(Model.Content.Body)
                }
            </div>
            <div id="gallery">
                @foreach (var media in Model.Content.Media)
                {
                    <a class="colorbox m-r-xs" href="@media.Url">
                        <fixedImage src="@media.LargeUrl" class="img-sm"></fixedImage>
                    </a>
                }
            </div>
        </div>
        <partial name="_Author" />
    </div>
    <div class="col col-sm-4 col-xl-3">
        <partial name="_Sidebar" />
    </div>
</div>
<partial name="_NeighbourPosts" />
