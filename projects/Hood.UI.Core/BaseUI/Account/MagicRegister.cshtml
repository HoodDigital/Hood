@model MagicRegisterViewModel
@inject IContentRepository _content
@{
    ViewData["Title"] = "Create an Account";

}
<div class="header">
    <h2>Create an Account</h2>
    <p>We'll email you a magic link to sign in.</p>
</div>
<form asp-controller="Account" asp-action="MagicRegisterGenerate" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" id="register-magic" role="form">
    @Html.RenderHoneypotField()
    <recaptcha action="login" />
    <div class="d-grid gap-2">
        <div asp-validation-summary="All" class="validation-summary"></div>
        <div class="row g-2">
            <div class="col form-floating">
                <input asp-for="FirstName" class="form-control" placeholder="Email address" autocomplete="email" />
                <label asp-for="FirstName"></label>
                <span asp-validation-for="FirstName"></span>
            </div>
            <div class="col form-floating">
                <input asp-for="LastName" class="form-control" placeholder="Email address" autocomplete="email" />
                <label asp-for="LastName"></label>
                <span asp-validation-for="LastName"></span>
            </div>
        </div>
        <div class="form-floating">
            <input asp-for="Email" class="form-control" placeholder="Email address" autocomplete="email" />
            <label asp-for="Email"></label>
            <span asp-validation-for="Email"></span>
        </div>
        <button type="submit" class="btn btn-success"><i class="fa fa-magic me-2"></i>Get a magic link</button>
    </div>
</form>
<partial name="_LoginSocials" />
