@model LoginViewModel
@inject IContentRepository _content
@{
    ViewData["Title"] = "Sign in";

}
<div id="login-page">
    <div class="header">
        <h2>Sign In</h2>
        <p>Enter your username and password to sign into your account.</p>
    </div>
    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" id="signin-password" role="form">
        @Html.RenderHoneypotField()
        <recaptcha action="login" />
        <div class="d-grid gap-2">
            <div asp-validation-summary="All" class="validation-summary"></div>
                <div class="form-floating">
                    <input asp-for="Username" class="form-control" placeholder="Email address" />
                    <label asp-for="Username"></label>
                    <span asp-validation-for="Username"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Password" class="form-control" placeholder="Email address" />
                    <label asp-for="Password"></label>
                    <span asp-validation-for="Password"></span>
                </div>
            <button type="submit" class="btn btn-success">Sign In</button>
            <span class="text-center">or</span>
            <a asp-action="Register" class="btn btn-outline-dark">Create an Account</a>
            <div class="text-center">
                <a asp-action="ForgotPassword">Forgot your password?</a>
            </div>
        </div>
    </form>
</div>
