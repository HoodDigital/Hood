@{
    Layout = "_Layout";
}
@section styles {
    @RenderSection("styles", required: false)
}
@section scripts {
    @RenderSection("scripts", required: false)
}
@section metas {
    @RenderSection("metas", required: false)
}
<fixedImage src="https://source.unsplash.com/random" style="min-height:30vh;" class="d-flex align-items-center justify-content-center text-center darkened mb-5">
    <div class="container position-relative">
        <div class="px-0">
            <h1 class="display-4 text-white">
                @if (ViewData.ContainsKey("PageTitle")) 
                {
                    @ViewData["PageTitle"]
                }
                else
                {
                    @ViewData["Title"]
                }
            </h1>
            <p class="lead my-3 text-white">@Html.Raw(ViewData["SubTitle"])</p>
        </div>
    </div>
</fixedImage>
<section class="container">
    @RenderBody()
</section>
