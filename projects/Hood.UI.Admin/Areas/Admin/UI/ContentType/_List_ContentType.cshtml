@model ContentTypeListModel
@{
    Layout = null;
}

@if (Model.List.Count > 0)
{
    @foreach (var content in Model.List)
    {
        <div class="card hover mb-3 p-3">
            <div class="d-md-flex align-items-center">
                <div class="col-2 col-md-3 col-lg-2 col-xl-1 me-3">
                    <a asp-action="Edit" asp-route-id="@content.Type">
                        <div class="ratio ratio-1x1">
                            <div class="bg-dark text-center d-flex flex-column align-items-center justify-content-center">
                                <i class="fa @content.Icon fa-3x text-white"></i>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col">
                    <div class="mb-1">
                        <a class="h5 fw-bold" asp-action="Edit" asp-route-id="@content.Type">@content.Title</a>
                    </div>
                    <div class="mb-0">
                        <small class="badge bg-gray">@content.Type</small>
                    </div>
                </div>
                <div class="col-auto mt-3 mt-md-0 text-end">
                    <div class="btn-group">
                        <a class="btn btn-sm btn-outline-dark" asp-action="Edit" asp-route-id="@content.Type"><i class="fa fa-edit me-2"></i>Edit</a>
                        <button type="button" class="btn btn-sm btn-outline-dark dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu dropdown-menu-end">
                            <a class="dropdown-item content-type-delete" asp-action="Delete" asp-route-id="@content.Type">
                                <i class="fa fa-trash-alt me-2"></i>
                                Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <partial name="_Pagination" />
}
else
{
    <alert type="Info" icon="fa-info" size="Epic" class="text-center m-0">
        There is no content types yet, go to a content type to add some.
    </alert>
}
